<td colspan="7">
  <input type="hidden" id="ajax_complete_<%= @change_record.id %>" />
  <table border="0" cellspacing="0" cellpadding="0">
    <tbody>
      <tr>
        <td>
          <span><%= CustomizedCourse.human_attribute_name(:billing_price) %>：</span>
          <span><%= CustomizedCourse.human_attribute_name(:billing_price_value, amount: number_to_currency(@change_record.target.teacher_price + @change_record.target.platform_price, unit: "￥", precision: 2)) %></span>
        </td>
        <td>
          <span><%= CustomizedCourse.human_attribute_name(:billing_duration) %>：</span>
          <span><%= second_to_minutes @change_record.target.video.duration %></span>
        </td>
      </tr>
      <tr>
        <td>
          <span><%= CustomizedCourse.human_attribute_name(:billing_teacher_price) %>：</span>
          <span><%= CustomizedCourse.human_attribute_name(:billing_teacher_price_value, amount: number_to_currency(@change_record.target.teacher_price, unit: "￥", precision: 2)) %></span>
        </td>
        <td>
          <span><%= CustomizedCourse.human_attribute_name(:billing_teacher_amount) %>：</span>
          <span><%= number_to_currency(@change_record.target.teacher_price * @change_record.target.video.duration / 3600.0, unit: "￥", precision: 2) %></span>
        </td>
      </tr>
      <tr>
        <td>
          <span><%= CustomizedCourse.human_attribute_name(:billing_workstation_price) %>：</span>
          <span><%= CustomizedCourse.human_attribute_name(:billing_workstation_price_value, amount: number_to_currency(@change_record.target.platform_price, unit: "￥", precision: 2)) %></span>
        </td>
        <td>
          <span><%= CustomizedCourse.human_attribute_name(:billing_workstation_amount) %>：</span>
          <span><%= number_to_currency(@change_record.amount, unit: "￥", precision: 2) %></span>
        </td>
      </tr>
    </tbody>
  </table>
</td>