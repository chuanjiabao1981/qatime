<!DOCTYPE html>
<html lang="cn">
<head>
  <title>Qatime</title>
  <meta name="renderer" content="webkit">

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => false %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => false %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/top_bar' %>

<div class="container">
  <div class='row'>
    <div class="col-md-12">
      <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
    </div>
    <div class='col-md-2'>
      <ul class="menu" style="color: white">
        <li>
          <%= link_to curriculums_path do %>
            <span class="glyphicon glyphicon-home"></span> <span class="qa_f18">首页</span> Home
          <% end %>
        </li>
        <li>
          <%= link_to state_teachers_lessons_path(teacher_id:current_user.id) do %>
            <span class="glyphicon glyphicon-list-alt"></span> <span class="qa_f18"> 状态</span> State
          <% end %>
        </li>
        <li>
          <%= link_to questions_path do %>
              <span class="fa fa-university"></span> <span class="qa_f18"><%= VipClass.model_name.human %></span> Vip
          <% end %>
        </li>

        <li>
          <%= link_to qa_faqs_path do %>
             <span class="glyphicon glyphicon-question-sign"></span><span class="qa_f18"> 疑问</span> faq
          <% end %>
        </li>

        <li>
          <%= link_to signout_path, :method=>'delete'  do %>
              <span class="glyphicon glyphicon-log-out"></span> <span class="qa_f18"> 退出</span> Exit
          <% end %>
        </li>
      </ul>
    </div>
    <div class='col-md-10'>
      <%= yield %>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>
<%= debug(params) if Rails.env.development? %>

</body>
</html>
