<%= content_tag(:div, class: 'qa_box panel panel-default panel-support') do %>
  <%= content_tag(:div, class: 'course-header-div') do%>
    <%= content_tag(:div, t("activerecord.view.order"), class: 'title') %>
  <% end %>
  <%= content_tag(:div, class: 'course-taxon-list') do %>
    <%= link_to content_tag(:div, t("activerecord.view.filter.all"),
                                   class: "order-taxon-div #{@filter_patams.blank? ? 'active' : nil}"), payment.user_orders_path(@student, user_class: @student.type) %>
    <%= link_to content_tag(:div, t("activerecord.status.order.unpaid"),
                                   class: "order-taxon-div #{@filter_patams[:cate]=='unpaid' ? 'active' : nil}"), "?cate=unpaid" %>
    <%= link_to content_tag(:div, t("activerecord.status.order.paid"),
                                   class: "order-taxon-div #{@filter_patams[:cate]=='paid' ? 'active' : nil}"), "?cate=paid" %>
    <%= link_to content_tag(:div, t("activerecord.status.order.canceled"),
                                   class: "order-taxon-div #{@filter_patams[:cate]=='canceled' ? 'active' : nil}"), "?cate=canceled" %>
  <% end %>

  <%= content_tag(:div, class: 'course-list') do %>
    <%= render partial: 'order', collection: @orders %>
    <%= will_paginate @order %>
  <% end %>
<% end %>
