<tr>
  <td><%= show_index(interactive_course_counter, @interactive_courses.limit_value) %></td>
  <td><%= interactive_course.name %></td>
  <td><%= interactive_course.teacher_name %></td>
  <td><%= number_to_currency(interactive_course.price, locale: 'cn') %></td>
  <td><%= number_to_percentage(interactive_course.teacher_percentage, precision: 0) %></td>
  <td><%= interactive_course.status_text %></td>
  <td class="handle">
    <% if allow? 'live_studio/interactive_courses', :preview %>
      <%= link_to t('view.live_studio/interactive_course.new.preview'), live_studio.preview_interactive_courses_path(id: interactive_course), method: :post, target: '_blank' %>
    <% end %>
    <% if allow? 'live_studio/interactive_courses', :update_class_date, @workstation %>
      <%= link_to t('view.live_studio/interactive_course.index.edit_lesson'), update_class_date_interactive_course_path(interactive_course, workstation_id: @workstation) %>
    <% end %>
  </td>
</tr>