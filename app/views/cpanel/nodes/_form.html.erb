<%= simple_form_for [:cpanel,@node] ,html: {class: 'form-horizontal' } do |f|%>
    <%= render 'shared/error_messages', :target => @node %>

    <%= f.input :name %>
    <%= f.association :section, :collection => Section.all.collect { |s| [s.name,s.id] } %>
    <%= f.input :summary, :input_html => {:class => "xxlarge"} %>
    <div class="form-actions">
      <%= f.submit :class => "btn btn-primary", 'data-disable-with' => "save" %>
      <%= link_to 'Back', cpanel_nodes_path %>
    </div>
<% end %>