<div class="login-wechat">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="tea-register retrieve-password">
          <div class="tea-register-title">
            <%= t ".title" %>
          </div>
          <div class="tea-register-left">
            <%= simple_form_for(@user, as: :user, url: update_payment_password_passwords_path, html: { method: :post }) do |f| %>
              <div class="form-group">
                <div class="input-group">
                  <% unless signed_in? %>
                    <%= f.text_field :login_account, class: 'form-control phone-num', placeholder: t('passwords.new_payment_password.placeholders.login_account') %>
                  <% else %>
                    <%= f.input :login_account, as: :hidden, input_html: {value: current_user.login_account} %>
                    <%= current_user.login_account %>
                  <% end %>
                </div>
                <%= f.error :login_account %>
              </div>

              <div class="form-group">
                <div class="input-group">
                  <%= f.input_field :payment_captcha_confirmation, maxlength: 4, placeholder: t('students.edit_password.placeholders.payment_captcha_confirmation') %>
                  <span class="input-group-btn">
                    <input class="btn btn-default" id="btn-obtain" type="button" data-send-captcha-btn data-send-to-input="#user_login_account"
                             data-send-url="<%= ajax_captchas_path %>" data-key="payment_password" value="<%= t "students.common.get_captcha" %>">
                  </span>
                </div>
                <%= f.error :payment_captcha_confirmation %>
              </div>

              <div class="form-group">
                <div class="input-group">
                  <%= f.input_field :payment_password, maxlength: 6, placeholder: t('passwords.new_payment_password.placeholders.payment_password') %>
                </div>
                <%= f.error :payment_password %>
              </div>

              <div class="form-group">
                <div class="input-group">
                  <%= f.input_field :payment_password_confirmation, maxlength: 6, placeholder:  t('.passwd_confirm_hd')  %>
                </div>
                <%= f.error :payment_password_confirmation %>
              </div>

              <div class="form-group">
                <div class="input-group">
                  <%= submit_tag t('common.submit'), class: 'btn-submit active' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>