<div class="row">
  <div class="col-md-2">
    <%= f.label :index %>
  </div>
  <div class="col-md-10">
    <div class="form-group">
      <%= f.number_field :index, class: 'form-control', placeholder: t('view.recommend/banner_item.placeholders.index') %>
    </div>
    <%= f.error :index %>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <%= f.label :title %>
  </div>
  <div class="col-md-10">
    <div class="form-group">
      <%= f.text_field :title, class: 'form-control', maxlength: 30, placeholder: t('view.recommend/banner_item.placeholders.title') %>
    </div>
    <%= f.error :title %>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <%= f.label :target_id %>
  </div>
  <div class="col-md-10">
    <%= f.select :target_id, options_for_select(::Teacher.where(city_id: @workstation.city_id).pluck(:name, :id), f.object.target_id), {include_blank: false}, {class: 'form-control'} %>
    <%= f.error :target_id %>
  </div>
</div>

<center><%= f.submit t('common.save'), class: 'btn btn-default' %></center>
