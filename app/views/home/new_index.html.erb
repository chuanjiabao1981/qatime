  </div>
</div>
<script type="text/javascript">
  $(function  () {
    // 广告位轮播
    $("#banner-list").rotate();

    $(".btn-tab").click(function  () {
      var more = $(this).attr('rel');
      $(this).addClass('active-tab').siblings().removeClass('active-tab');
      $(".questions-more,.curriculums-more").hide();
      $(more).show();
      if($(this).attr('id') == undefined){
        var index = $(".btn-tab").index($(this));
        $('.class-course').eq(index).show().siblings().hide();
      }
    })

    $('#home_curriculums').bind('ajax:complete', function(event, data) {
      $('#home_curriculums_replaced').html(data.responseText);
      $('#home_curriculums_replaced').show().siblings().hide();
    });

    $('#home_questions').bind('ajax:complete', function(event, data) {
      $('#home_questions_replaced').html(data.responseText);
      $('#home_questions_replaced').show().siblings().hide();
    });
