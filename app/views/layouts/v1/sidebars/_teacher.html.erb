<div class="side-nav">
  <div class="user-portrait">
    <%= image_tag @owner.avatar_url(:ex_big), class: 'handle_error_avatar' %>
    <p>
      <span><%= @owner.name %></span>
      <%= image_tag "#{@owner.gender || 'male'}_big.png" %>
    </p>
  </div>
  <ul class="nav-menu">
    <li class="<%= 'active' if teacher_sidebar_nav_is?(:setting) %>">
      <%= link_to main_app.info_teacher_path(@owner) do %>
        <i class="icon-user"></i>
        <span><%= t("view.common_bars.user_setting") %></span>
      <% end %>
    </li>
    <li class="<%= 'active' if teacher_sidebar_nav_is?(:cash) %>">
      <%= link_to payment.earning_records_user_path(@owner) do %>
