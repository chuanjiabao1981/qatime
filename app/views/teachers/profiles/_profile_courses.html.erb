<div class="basic-class">
  <div class="class-header">
    <h2><%= t('teachers.profile.my_courses') %></h2>
  </div>

  <div class="class-info">
    <% if @courses.blank? %>
      <div class="info-notfound">
        <center>
          <%= image_tag 'notfound.png' %>
        </center>
        <p>
          <%= t('view.course_show.nofound') %>
        </p>
      </div>
    <% else %>
      <ul class="classify-msg">
        <% @courses.each do |course| %>
          <li class="col-md-4 col-sm-4 col-xs-6">
            <%= link_to live_studio.course_path(course) do %>
              <%= image_tag course.publicize_url(:info), class: 'handle_error_list' %>
            <% end %>
            <div class="handpick-info">
              <p>
                <% if course.status == 'published' %>
                  <span class="status-admissions"><%= course.status_text %></span>
                <% else %>
                  <span class="status-classes"><%= course.status_text %></span>
                <% end %>

                <%= link_to live_studio.course_path(course) do %>
                  <strong><%= truncate_u(course.name, length: 12) %></strong>
                <% end %>
              </p>
              <p>
                <span><%= course.grade %><%= course.subject %>/<%= t('view.course_show.lesson_count') % course.lessons_count %></span>
                <%= link_to truncate_u(course.teacher.try(:name), length: 6), main_app.profile_teacher_path(course.teacher) if course.teacher %>
              </p>
            </div>
            <div class="classify-info">
              <p>
                <i>
                  <span><%= localize(course.start_at.to_date, format: :default) if course.start_at %></span>
                  <span><%= t('view.course_show.to') %></span>
                  <span><%= localize(course.end_at.to_date, format: :default) if course.end_at %></span>
                </i>
              </p>
              <p>
                <span class="info-price"><%= number_to_currency(course.current_price, locale: :cn) %></span>
                <span class="info-num"><%= t "view.course_search_show.purchase_number" %><%= course.buy_user_count %></span>
              </p>
            </div>
          </li>
        <% end %>
      </ul>

      <center><div class="pagination-fix"><%= will_paginate @courses, class: 'paging', previous_label: '←', next_label: '→' %></div></center>
    <% end %>
  </div>
</div>