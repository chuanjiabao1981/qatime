
<% if current_user.blank? %>
  <%= link_to t('view.course_info_show.join_taste'), live_studio.taste_video_course_path(@course), method: :post, class: 'btn-addclass' if @course.taste_count > 0 %>
  <%= link_to t('activerecord.view.enroll_now'), live_studio.new_video_course_order_path(@course), class: 'btn-addclass' %>
<% else %>
  <% if @course.bought_by?(current_user) %>
    <!-- 已经购买 -->
    <%= link_to(t('view.course_info_show.start_learning'), live_studio.play_video_course_path(@course), target: '_blank', class: 'btn-startclass') unless @course.published? %>
  <% elsif @course.tasted?(current_user) %>
    <!-- 未购买试听结束 -->
    <!-- 试听结束和购买按钮 -->
    <%= t('view.course_info_show.taste_end') %>
    <%= link_to t('activerecord.view.enroll_now'), live_studio.new_video_course_order_path(@course), class: 'btn-addclass' %>
  <% elsif @course.tasting?(current_user) %>
    <!-- 开始试听和购买按钮 -->
    <%= link_to(t('view.course_info_show.start_taste'), live_studio.play_video_course_path(@course), target: '_blank', class: 'btn-startclass') unless @course.published? %>
    <%= link_to t('activerecord.view.enroll_now'), live_studio.new_video_course_order_path(@course), class: 'btn-addclass' %>
  <% elsif @course.taste_count <= 0 %>
    <%= link_to t('activerecord.view.enroll_now'), live_studio.new_video_course_order_path(@course), class: "btn-addclass" %>
  <% else %>
    <!-- 试听和购买按钮 -->
    <%= link_to(t('view.course_info_show.join_taste'), live_studio.taste_video_course_path(@course), class: 'btn-addclass', id: "taste-course-#{@course.id}", method: :post, remote: true) %>
    <%= link_to t('activerecord.view.enroll_now'), live_studio.new_video_course_order_path(@course), class: 'btn-addclass' %>
  <% end %>
<% end %>
