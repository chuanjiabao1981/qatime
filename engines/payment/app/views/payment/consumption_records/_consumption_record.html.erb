<% if consumption_record.target && consumption_record.target.is_a?(Payment::Order) %>
  <tr>
    <td><%= number_to_currency(consumption_record.amount, locale: :cn, unit: "￥", precision: 1) %></td>
    <td><%= consumption_record.target.product.model_name.human %></td>
    <td><%= consumption_record.change_type_text %></td>
    <td><%= consumption_record.created_at.strftime('%Y-%m-%d %H:%M') %></td>
    <td><%= link_to t("view.payment/consumption_record.view"), payment.user_order_path(@current_resource, consumption_record.target.transaction_no) if consumption_record.target %></td>
  </tr>
<% elsif consumption_record.target %>
  <tr>
    <td><%= number_to_currency(consumption_record.amount, locale: :cn, unit: "￥", precision: 1) %></td>
    <td>
      <%= number_to_currency(consumption_record.target.total_price, unit: "￥", precision: 1)%>
      *
      <%= second_to_minutes consumption_record.target.video.duration %>
    </td>
    <td><%= consumption_record.target.model_name.human %></td>
    <td><%= consumption_record.change_type_text %></td>
    <td><%= consumption_record.created_at.strftime('%Y-%m-%d %H:%M') %></td>
    <td><%= feeble_link(consumption_record.target, text: t("view.payment/consumption_record.view")) if consumption_record.target %></td>
  </tr>
<% end %>
