<div class="qa_object_item">
  <div style="float:left">
    <%= render_qa_object_avatar brief_info %>
  </div>
  <div class="title">
    <%= render partial: "shared/common_states/info",
               locals: {object_state: brief_info,
                        use_super_controller: defined?(use_super_controller) ? use_super_controller : false} %>
    <%= render_qa_object_title brief_info %>
  </div>
  <div class="info">
    <%= render_qa_object_info brief_info %>
  </div>
</div>