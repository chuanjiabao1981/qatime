        <li><%= link_to t("view.common_bars.download"), welcome_download_path %></li>
        <li><%= link_to t("view.common_bars.common_problem"), qa_faqs_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user.teacher? %>
          <li>
            <%= link_to user_notification_path do %>
              <span class="glyphicon glyphicon-envelope"></span>
              <%= t "view.common_bars.notice" %>
              <span class="badge"><%= teacher.unread_notifications_count if teacher.unread_notifications_count > 0 %></span>
            <% end %>
          </li>
        <% end %>
        <li>
          <%= link_to info_teacher_path(teacher) do %>
            <span class="glyphicon glyphicon-user"></span>
            <%= t "view.common_bars.personal_center" %>
          <% end %>
        </li>
        <li><%= link_to t("view.common_bars.sign_out"), signout_path, :method=>'delete' %></li>
