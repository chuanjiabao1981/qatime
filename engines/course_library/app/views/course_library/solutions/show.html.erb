<div class="qa_box">
  <div class="qa_cell box_header">
    <%= link_to @syllabus.title, course_library.syllabus_path(@syllabus) %> /
    <%= link_to @directory.title, course_library.syllabus_directory_path(@syllabus, @directory) %> /
    <%= link_to @course.title, syllabus_directory_course_path(@syllabus, @directory, @course) %>/
    <%= link_to @homework.title, course_homework_path(@course, @homework) %>/
    <div class="qa_object header">
      <h1><%= @solution.title %></h1>
    </div>
    <div class="qa_object footer">
      <%= link_to edit_homework_solution_path(@homework, @solution) do %>
          <i class="fa fa-pencil-square-o"></i>编辑
      <% end %>
    </div>
  </div>
  <div class="qa_big_cell">
    <h4>概述</h4>
    <div class="qa_object content">
      <%= @solution.description %>
    </div>
  </div>
  <div class="qa_big_cell">
    <h4>讲解视频</h4>
    <% if ! @solution.current_video.nil? %>
    <%= video_js_player @solution.current_video %>
    <% end %>
  </div>

  <div class="qa_big_cell">
    <h4>材料</h4>
    <%= render partial: 'shared/qa_files/qa_file', collection: @solution.qa_files%>
  </div>
  <div style="clear: both"></div>
</div>

<div class="qa_sep_15"></div>

