<div class="qa_box">

  <div class="qa_topic">
      <div class="header">
        <div class="qa_cell">
          <div class="pull-right">
            <%=image_tag @topic.user.avatar.normal.url %>
          </div>
          <div>
            论坛 》<%= @topic.node.name %>
          </div>

          <div class="title">
            <h4><%= @topic.title %></h4>
          </div>
          <div class="info">
            <%= @topic.user.name %> •  <%= time_ago_in_words(@topic.created_at) %>
          </div>
        </div>
      </div>
      <div class="content">
        <div class="qa_cell">
          <div>
            <%= @topic.body.html_safe %>
          </div>
          <div class="pull-right">
            <%= link_to "", edit_topic_path(@topic), class: "glyphicon glyphicon-edit"%>
            <%= link_to "", topic_path(@topic),
                        :method => :delete,
                        'data-confirm' => 'Are you sure?',
                        class: "glyphicon glyphicon-remove"%>
          </div>
          <div style="clear: both"></div>
        </div>
      </div>
  </div>
</div>