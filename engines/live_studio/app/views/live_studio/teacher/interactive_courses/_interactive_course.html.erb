<li>
  <div class="row">
    <div class="col-md-3 discipline-pic">
      <%= image_tag(interactive_course.publicize_url(:list)) -%>
    </div>
    <div class="col-md-6 discipline-info">
      <div class="row info-title">
        <div class="col-md-12">
          <strong><%= interactive_course.name %></strong>
        </div>
      </div>
      <div class="row info-state">
        <div class="col-md-6">
          <span><%= LiveStudio::InteractiveCourse.human_attribute_name(:grade) %></span>
          <span><%= interactive_course.grade %></span>
        </div>
        <div class="col-md-6">
          <span><%= LiveStudio::InteractiveCourse.human_attribute_name(:teacher_video_lessons_count) %></span>
          <span><%= t("view.course_show.lessons_count_of", lessons_count: interactive_course.video_lessons_count_of(@teacher)) %></span>
        </div>
      </div>
      <div class="row info-user">
        <div class="col-md-12">
          <span><%= LiveStudio::InteractiveCourse.human_attribute_name(:price) %></span>
          <span><%= number_to_currency(interactive_course.price, unit: "￥", precision: 2) %></span>
          <i>(<%= number_to_percentage(interactive_course.teacher_percentage, precision: 0) %><%= LiveStudio::InteractiveCourse.human_attribute_name(:percentage) %>)</i>
        </div>
      </div>
    </div>
    <div class="col-md-3 course-state">
      <span class="col-md-12 col-sm-4 col-xs-4">招生中</span>
      <a href="" class="col-md-12 col-sm-4 col-xs-4">预览</a>
      <a href="" class="col-md-12 col-sm-4 col-xs-4">公告</a>
    </div>
  </div>
</li>