<div class="qa_cell course">
  <div class="pull-left no">
      <% if chapter_index +1 < 10 %>
        &nbsp;
      <% end %>
      <%="#{chapter_index+1}.#{course_index+1}"%>
      <% if course_index +1 <10 %>
      <% end %>
  </div>
  <% if allow? "teachers/courses",:new, curriculum %>
    <div class="pull-right">

      <div>
        <%= link_to edit_teachers_curriculum_course_path(curriculum,course),style:"color:green" do%>
            编辑<%= Course.model_name.human%>
        <% end %>
      </div>
      <div class="qa_sep_5"></div>
      <div>
        <%= link_to new_teachers_course_lesson_path(course),style:"color:green" do%>
            增加<%= Lesson.model_name.human %>
        <% end %>
      </div>

    </div>
  <% end %>
    <div class="title qa_f16">
      <%=link_to course.name ,course_path(course)%>
      <div class="qa_f12" style="color: gray">
        <span><%= course.chapter %></span> • <span> <%= course.lessons_count%>个<%=Lesson.model_name.human%></span>
      </div>
    </div>
</div>
<div class="lessons">
      <%= render partial:"courses/lesson_cell",collection:course.get_contain_tags_lessons(params[:tags])%>
</div>
