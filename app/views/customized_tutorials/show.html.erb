<div class="qa_box">
  <div class="qa_cell box_header">
    <%=link_to customized_course_full_name(@customized_tutorial.customized_course) ,
               customized_course_path(@customized_tutorial.customized_course)%>/<%= @customized_tutorial.title %>
  </div>
  <div class="qa_box">
    <div class="qa_cell" style="height: 400px">
        <%if @customized_tutorial.video and @customized_tutorial.video.name %>

            <%= video_js_player(@customized_tutorial.video) %>
        <% else %>
            视频未上传
        <% end %>

    </div>

    <div class="qa_cell">
      <%= @customized_tutorial.content %>
    </div>

    <%= render partial: 'shared/qa_files/qa_file', collection: @qa_files %>
  </div>
</div>
