<% @current_resource ||= current_user %>

<% if signed_in? %>
  <% if @current_resource.student? %>
    <%= render partial: 'layouts/topbar/student', locals: { student: @current_resource } %>
  <% elsif @current_resource.teacher? %>
    <%= render partial: 'layouts/topbar/teacher', locals: { teacher: @current_resource } %>
  <% else %>
    <%= render 'layouts/topbar/admin_or_manager' %>
  <% end %>
<% else %>
  <%= render 'layouts/topbar/unsigned' %>
<% end %>
