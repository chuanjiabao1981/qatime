<div class="tab-pane fade" id="courseware">
  <div class="courseware-box">
    <ul class="courseware-list">
      <% @quotes.each do |quote| %>
        <li>
          <div class="row">
            <div class="col-md-12 file-name">
              <p><%= quote.file_name %></p>
            </div>
            <div class="col-md-6 .col-sm-6 file-size">
              <span><%= Resource::Quote.human_attribute_name(:created_at) %>ï¼š</span>
              <span><%= l(quote.file.created_at) if quote.file.created_at %></span>
            </div>
            <div class="col-md-6 .col-sm-6 file-handle">
              <span><%= number_to_human_size(quote.file_size.to_i, precision: 2) %></span>
              <%= link_to t('view.live_studio/customized_groups.show.courseware.download'), quote.file_url %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
