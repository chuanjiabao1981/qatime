        <span class="qa_f18"><%= t "view.teacher_bars.notification" %></span>&nbsp;&nbsp;
        <span class="glyphicon glyphicon-chevron-right"></span>
      <% end %>
    </li>
    <li>
      <%= link_to course_library.teacher_syllabuses_path(@teacher) do %>
        <span class="fa fa-sitemap"></span>
        <span class="qa_f18"><%= t "view.teacher_bars.teacher_syllabuses" %></span>&nbsp;&nbsp;
        <span class="glyphicon glyphicon-chevron-right"></span>
      <% end %>
    </li>
    <li>
      <%= link_to customized_courses_teacher_path(@teacher) do %>
        <span class="fa fa-graduation-cap"></span>
        <span class="qa_f18"><%= t("view.common_bars.customized_courses") %></span>&nbsp;&nbsp;
