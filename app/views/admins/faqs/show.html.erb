<div class="col-md-11">
  <div class="qa_box">
    <div class="qa_topic">
      <div class="header">
        <div class="qa_cell" style="background-color: #f5f5f5">
          <div class="title">
            <h4><%= @faq.name %></h4>
          </div>
        </div>
      </div>
      <% if not @faq.video_url.nil? and not @faq.video_url.blank? %>
          <div class="qa_cell" style="height: 400px">
            <source src="<%= @faq.video_url %>" id = "video_source" type="<%= "mp4" %>" />
            <source src="<%= true %>" id = "buy_status" />

            <video id="player"/>
          </div>
      <% end %>

      <% if not @faq.desc.nil? and not @faq.desc.blank? %>
          <div class="content">
            <div class="qa_cell">
              <div>
                <%= @faq.desc.html_safe %>
              </div>
              <div style="clear: both"></div>
            </div>
          </div>
      <% end %>
    </div>

  </div>
</div>