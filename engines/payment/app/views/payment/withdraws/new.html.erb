<div class="container container-details">
  <div class="row">
    <div class="panel panel-default panel-profile">
      <div class="apply-tea">
        <div class="tutoring-title">
          <div class="tutoring-title-left">
            <%= image_tag('icon.png') %>
            <span class="title-size">
              <%= t("view.withdraw_cn") %>
            </span>
          </div>
        </div>
        <%= simple_form_for [User.new(id: @current_resource.id), @withdraw], html: {autocomplete: "off"} do |f| %>
          <%= f.hidden_field :pay_type %>
          <div class="apply-tea-con">
            <div class="apply-tea-left">
              <div class="tea-left-title">
                <%= t("view.withdraw.amount") %>
              </div>
              <div class="tea-left-con">
                <div class="form-group">
                  <label for="course_invitation_money">
                    <%= t("view.withdraw.amount") %>
                  </label>
                  <div class="input-group">
                    <%= f.text_field :amount, class: 'form-control teacher-money', placeholder: t('view.withdraw.amount_hd') %>
                    <span><%= t('currency.cn')  %></span>
                  </div>
                  <span>(<%= number_to_currency(@resource_user.cash_account!.available_balance.to_f,unit: '￥') %><%= t('view.able') %>)</span>
                  <%= f.error :amount %>
                </div>
              </div>

              <div class="tea-left-con">
                <div class="form-group">
                  <label for="course_invitation_pwd">
                    <%= Payment::CashAccount.human_attribute_name(:password) %>
                  </label>
                  <div class="input-group">
                    <%= f.text_field :payment_password, class: 'form-control tec-pwd', onfocus: '$(this).attr("type","password")', placeholder: t('view.payment_password_hd') %>
                  </div>
                  <%= link_to t('view.find_password'), send("edit_#{@resource_user.role}_path", @resource_user, {cate: 'security_setting'}), target: '_blank' %>
                  <%= f.error :payment_password %>
                </div>
              </div>

            </div>
            <div class="apply-tea-right">
              <div class="tea-right-title">
                <%= Payment::Withdraw.human_attribute_name(:pay_type) %>
              </div>
              <div class="tea-right-con tea-wechat">
                <div class="form-group">  
                  <span>
                    <i>提现至</i>
                    <%= image_tag "login-weixin.png" %>
                    <i>微信钱包</i>
                  </span>
                  <% if @withdraw.wechat_user -%>
                    <span>(当前绑定：<%= @withdraw.wechat_user.userinfo['info']['nickname'] %>)</span>
                    <%= f.hidden_field :wechat_user_id %>
                  <% else %>
                    <span>(尚未绑定 <%= link_to "点击立即绑定", "##" %>)</span>
                  <% end %>
                  <%= f.error :wechat_user_id %>
                </div>
              </div>

              <div class="tea-right-con tea-right-send">
                <%= f.submit t('view.withdraw.common.audit'), id: "submit_withdraw", class: 'active' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
