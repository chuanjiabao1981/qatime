<div class="panel panel-default">
  <div class="my-tutorial">
    <div class="tutorial-title">
      <span><%= t("live_studio.menu.teacher.my_courses") %></span>
      <%=link_to t("live_studio.menu.teacher.my_course_invitations"), live_studio.teacher_course_invitations_path %>
    </div>
    <div class="tutorial-nav">
      <center>
        <%= link_to t("live_studio.menu.teacher.course.all"),
                    live_studio.teacher_courses_path(@teacher),
                    class: "#{ 'active' if params[:cate].blank? }" %>
        <%= link_to t("live_studio.menu.teacher.course.waiting"),
                    live_studio.teacher_courses_path(@teacher, cate: 'waiting'),
                    class: "#{ 'active' if 'waiting' == params[:cate] }" %>
        <%= link_to t("live_studio.menu.teacher.course.teaching"),
                    live_studio.teacher_courses_path(@teacher, cate: 'teaching'),
                    class: "#{ 'active' if 'teaching' == params[:cate] }" %>
        <%= link_to t("live_studio.menu.teacher.course.finished"),
                    live_studio.teacher_courses_path(@teacher, cate: 'finished'),
                    class: "#{ 'active' if 'finished' == params[:cate] }" %>
      </center>
    </div>
    <div>
      <div class="tutorial-details">
        <%= render partial: 'course', collection: @courses %>
        <%= content_tag :div, class: 'no-course' do %>
          <p>未找到任何辅导班</p>
        <% end if @courses.blank? %>
      </div>
    </div>

    <center>
      <div class="pagination-fix">
        <%= will_paginate @courses %>
      </div>
    </center>
  </div>
</div>
