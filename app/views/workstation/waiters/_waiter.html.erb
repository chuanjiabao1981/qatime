<div class="row qa_big_cell">
  <div class="col-md-1"><%= waiter_counter + 1 %></div>
  <div class="col-md-3"><%= waiter.name %></div>
  <div class="col-md-3"><%= waiter.email %></div>
  <div class="col-md-3"><%= waiter.login_mobile %></div>
  <div class="col-md-2">
    <%= link_to "编辑", edit_waiter_path(waiter) if allow?('waiters', 'edit', waiter) %>
    <%= link_to "删除", edit_waiter_path(waiter), method: 'delete', confirm: '确定删除?' if allow?('waiters', 'destroy', waiter) %>
  </div>
</div>
