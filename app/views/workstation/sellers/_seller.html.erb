<div class="row qa_big_cell">
  <div class="col-md-1"><%= seller_counter + 1 %></div>
  <div class="col-md-3"><%= seller.name %></div>
  <div class="col-md-3"><%= seller.email %></div>
  <div class="col-md-3"><%= seller.login_mobile %></div>
  <div class="col-md-2">
    <%= link_to "编辑", edit_seller_path(seller) if allow?('sellers', 'edit', seller) %>
    <%= link_to "删除", edit_seller_path(seller), method: 'delete', confirm: '确定删除?' if allow?('sellers', 'destroy', seller) %>
  </div>
</div>
