<div class="modifiy-info">
  <div class="row">
    <div class="col-md-3 label-line">
      <label for="" class="control-label"><%= t "teachers.edit_login_mobile.binding_mobile" %></label>
    </div>
    <div class="col-md-6">
      <span class="contact-info"><%= @student.login_mobile %></span>
      <%= hidden_field_tag :verify_mobile, @student.login_mobile, name: 'send-to' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3  label-line">
      <%= f.label :payment_captcha_confirmation, t('students.edit_password.payment_captcha_confirmation') %>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <div class="input-group">
          <%= f.input_field :payment_captcha_confirmation, maxlength: 4, placeholder: t('students.edit_password.placeholders.payment_captcha_confirmation') %>
          <span class="input-group-btn">
                <input class="btn btn-default btn-code" type="button" data-send-captcha-btn data-send-to-input="#verify_mobile" data-send-url="<%= ajax_captchas_path %>" data-key="payment_password" value="<%= t "teachers.edit_login_mobile.get_captcha" %>">
              </span>
        </div>
      </div>
      <%= f.error :payment_captcha_confirmation %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3  label-line">
      <%= f.label :payment_password, t('students.edit_password.payment_password') %>
    </div>
    <div class="col-md-6">
      <%= f.input_field :payment_password, maxlength: 6, placeholder: t('students.edit_password.placeholders.payment_password') %>
      <%= f.error :payment_password %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3  label-line">
      <%= f.label :payment_password_confirmation, t('students.edit_password.payment_password_confirmation') %>
    </div>
    <div class="col-md-6">
      <%= f.input_field :payment_password_confirmation, maxlength: 6, placeholder: t('students.edit_password.placeholders.payment_password_confirmation') %>
      <%= f.error :payment_password_confirmation %>
    </div>
  </div>
  <div class="row save-line">
    <div class="col-md-6 col-md-offset-3">
      <center>
        <%= link_to t('common.cancel'), edit_student_path(@student, cate: :security_setting) %>
        <%= f.submit t('common.save') %>
      </center>
    </div>
  </div>
</div>