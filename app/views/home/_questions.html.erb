<table border="0" cellspacing="0" cellpadding="0">
  <tbody>
  <% @questions.each do |q| %>
    <tr>
      <td>
        <span class="news-question"><%= q.title %></span>
        <span class="news-ask">最新提问</span><br>
        <span><%= "#{q.vip_class.category}#{q.vip_class.subject}" %></span>
        <span class="answer">答案：<%= q.answers_count %>次</span>
        <span>评论：<%= q.comments.length %>条</span>
      </td>
      <td>
        <%= image_tag q.student.avatar_url(:small) %>
        <span><%= q.student.name %></span><br>
        <span>发表时间：</span>
        <span><%= I18n.l q.created_at %></span>
      </td>
    </tr>
  <%end %>
  </tbody>
</table>