<tr>
  <td><%= billing_counter + 1 %></td>
  <td>
    <%= billing.total_money  %>
  </td>
  <td>
    <% billing.change_records.each do |record| %>
    <%= record.owner.try(:model_name).try(:human) %>(<%= record.owner.try(:name) %>): <%= record.different %> <br />
    <% end %>
  </td>
  <td>
    <%= billing.summary %>
  </td>
  <td><%= localize(billing.created_at, format: :long) %></td>
</tr>
