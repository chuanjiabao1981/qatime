<% course = ticket.course -%>
<tr>
  <td><%= ticket_counter + 1 %></td>
  <td>
    <%= link_to course.name, [:student, course] %>
  </td>
  <td>
    <%= course.short_description %>
  </td>
  <td><%= course.status %></td>
  <td><%= ticket.type_name %></td>
  <td>
    <%=link_to t("activerecord.view.edit"), edit_manager_course_path(course) if allow?("live_studio/teacher/courses", "update") %>
    <%=link_to t("activerecord.view.delete"), manager_course_path(course), method: :delete,
               'data-confirm' => t('activerecord.view.message.confirm') if allow?("live_studio/teacher/courses", "destroy") %>
  </td>
</tr>
