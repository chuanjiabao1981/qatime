<ul class="item-handpick" id="interactive_courses">
  <% courses.each do |course| %>
    <li class="col-md-4 col-sm-4 col-xs-6">
      <%= link_to live_studio.interactive_course_path(course), target: '_blank', class: "#{'course-link' if course.is_finished?}" do %>
        <%= image_tag course.publicize_url(:info), class: 'handle_error_list' %>
        <% if course.is_finished? %>
          <span class="class-finish"><%= t('teachers.profile.is_finished') %></span>
        <% end %>
      <% end %>
      <div class="handpick-info">
        <p>
          <%= link_to live_studio.interactive_course_path(course), target: '_blank' do %>
            <strong><%= truncate_u(course.name, length: 12) %></strong>
          <% end %>
        </p>
        <p>
          <span><%= course.grade %><%= course.subject %></span>
          <span class="class-price"><%= number_to_currency(course.current_price, locale: :cn) %></span>
        </p>
      </div>
    </li>
  <% end %>
</ul>