<%= content_tag :div, class: 'notfound' do %>
  <center>
    <%= image_tag 'no-course.png' %>
  </center>
  <p><%= t('view.course_show.nofound') %></p>
<% end if @courses.blank? %>

<div class="screening-con">
  <% @courses.in_groups_of(4).each do |course_group| %>
    <ul class="list-screening">
      <% course_group.each do |course| %>
        <% if course.present? %>
          <li>
            <%=link_to live_studio.course_path(course) do %>
              <%= content_tag(:div, image_tag(course.publicize_url(:list))) %>
            <% end %>
            <div class="dl-con">
              <dl class="dl-screening">
                <dd>
                  <span class="class-open <%= 'admissions' if course.published? %>"><%= course.status_text %></span>
                  <span class="class-msg">
                    <%=link_to live_studio.course_path(course) do %>
                      <%= course.name %>
                    <% end %>
                  </span>
                </dd>
                <dd>
                  <span><%= course.grade%><%= course.subject %>/<%= t('view.course_show.lesson_count') % course.lessons_count %></span>
                  <span class="tea-name"><%= course.teacher.try(:name) %></span>
                </dd>
                <dd class="dd-num-msg">
                  <p><i class="glyphicon glyphicon-time dd-date"><%= course.live_end_date.try(:to_s) %>è‡³<%= course.live_end_date.try(:to_s) %></i></p>
                  <p><i class="money-num"><%= number_to_currency(@course.current_price, locale: :cn) %></i><i class="person-buy"><%= t "view.course_search_show.purchase_number" %><em class="person-num"><%= course.buy_tickets_count %></em></i></p>
                </dd>
              </dl>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  <% end %>
  <center class="course_paginate"><%= will_paginate @courses %></center>
</div>
