<% if @topic.replies.any? %>
    <div style="margin-top: 10px;list-style: none">
      <div class="qa_box" id = "reply_detail_index">
        <div style="border-bottom:1px solid #ccc;padding: 8px;font-size:12px;color:gray" id = "replies_count">
          共收到 <b><%= @topic.replies_count %></b> 条回复
        </div>
        <% current_page = params[:page].to_i > 1 ? params[:page].to_i : 1 %>
        <% i =  (current_page - 1) * 10%>
        <% for reply in @replies %>
            <div style="border-bottom:1px solid #ccc">
                <div class="pull-left" style="padding: 8px">
                    <%= image_tag reply.user.avatar.normal.url if reply.user%>
                </div>
                <div style="padding:8px;margin-left: 58px">
                    <span style="color:gray">
                        <small><%= reply.user.name if reply.user%></small>
                        <small>#<%= i+1 %>楼</small>
                        <small><%= time_ago_in_words(reply.created_at) %>前</small>
                    </span>
                    <div style="line-height: 180%;">
                        <%= reply.body.html_safe %>
                    </div>
                </div>
            <div style="clear: both"></div>
            </div>
            <% i = i + 1 %>
        <% end %>
    </div>
      <div class="digg_pagination" align = “right”>
        <%= will_paginate @replies, :container => false%>
      </div>
    </div>
<% end %>