<tr>
  <td><%= order_counter + 1 %></td>
  <td><%= order.product.try(:name) %></td>
  <td><%= order.total_money %></td>
  <td><%= order.pay_timeout? ? t("activerecord.view.timeout") : order.status_text %></td>
  <td><%= order.order_no %></td>
  <td><%= localize(order.created_at, format: :long) %></td>
  <td><%= link_to t("activerecord.view.pay"),  user_order_path(@user,order.order_no) if order.unpaid? && !order.pay_timeout? && @user == current_user %></td>
</tr>
