<div class="row">
  <div class="panel panel-default panel-bottom">
    <div class="recommended-tutoring">
      <div class="tutoring-title">
        <div class="tutoring-title-left">
          <%= image_tag 'icon.png'%>
          <span class="title-size"><%= t("view.course_info_show.course_label") %></span>
        </div>
    </div>
     <div class="tec-data live-data">
      <div class="data-con">
        <table border="0" cellspacing="0" cellpadding="0">
          <tbody>
            <tr>
              <td rowspan="5" class="live-img">
                <%= image_tag @course.publicize_url(:info) %>
              </td>
              <td colspan="3">
                <div class="subject-title">
                <span><%= @course.name %></span><span><%= t('view.course_show.online')%></span>
                </div>
              </td>
            </tr>
            <tr>
              <td>
                <span class="headline-color"><%= t('view.course_info_show.subject')%></span><span class="title-color interval"><%= @course.subject%></span>
              </td>
              <td>
                <span class="headline-color"><%= t('view.course_info_show.category')%></span><span class="title-color interval"><%= @course.grade %></span>
              </td>
              <td>
                <span class="headline-color"><%= t("view.course_show.lessons_count") %></span><span class="title-color interval"><%= t("view.course_show.lessons_count_of", lessons_count: @course.lessons_count) %></span>
              </td>
            </tr>
            <tr>
              <td colspan="3">
                <span class="headline-color"><%= t("activerecord.view.date") %></span><span class="title-color interval"><%= @course.live_start_date.try(:to_s) %>è‡³<%= @course.live_end_date.try(:to_s) %></span>
              </td>
            </tr>
            <tr>
              <td colspan="3">
                <span class="headline-color"><%= t("activerecord.view.status") %></span><span class="title-color interval"><%= @course.status.text %>(<%= "#{@course.closed_lessons_count}/#{@course.lessons_count}" %>)</span>
              </td>
            </tr>
            <tr>
              <td colspan="3" class="live-abstract">
                <div class="introduction-con">
                  <p><%= raw @course.description %></p>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
     </div>
    </div>
  </div>
</div>