
<div class="login-content">
  <div class="container">
    <div class="row">
        <div class="login-bg"></div>
        <div class="login-msg">
          <div class="login-account">
            <div class="account-left">
              <%= t('.log_in') %>
            </div>
            <div class="account-right">
              <span><%= t('.no_account_desc') %></span>
              <span>
                <%= link_to t('view.common_bars.student_register'),new_student_path %>
              </span>
              <span>
                <%= link_to t('view.common_bars.teacher_register'),new_teacher_path %>
              </span>
            </div>
          </div>
          <div class="login-account-con">
            <%= simple_form_for @user, url: sessions_path, method: :post do |f| %>
              <div class="input-group form-group string optional user_login_account">
                <span class="input-group-addon" id="basic-addon1"><i class="fa fa-user" aria-hidden="true"></i></span>
                <%= f.input_field :login_account, placeholder: t('.login_account_placeholder') %>
              </div>
              <span class="help-block has-error"></span>
              <div class="input-group form-group string optional user_password">
                <span class="input-group-addon" id="basic-addon1"><i class="fa fa-lock" aria-hidden="true"></i></span>
                <%= f.input_field :password, placeholder: t('.password_placeholder') %>
              </div>
              <span class="help-block has-error"></span>
              <div class="input-password">
                <span><input type="checkbox" name="" id="password" value="">
                  <label for="password"><%= t('.remember_account') %></label>
                </span>
                <span>
                  <%= link_to t(".forget_password"), new_password_path %>
                </span>
              </div>
              <span class="help-block has-error"></span>
              <%= button_tag t('.sign_now'),class: 'login-send' %>
              <div class="login-other">
                <%= image_tag 'login_line.png' %>
                <span><%= t('.other_login_type') %></span>
                <%= image_tag 'login_line.png' %>
              </div>
              <div class="login-weixin">
                <center>
                  <a href="<%= wechat_login_href %>">
                    <%= image_tag 'login-weixin.png' %>
                  </a>
                </center>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>



