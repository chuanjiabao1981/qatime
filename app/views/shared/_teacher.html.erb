<div class="qa_box">
  <div class="qa_big_cell">
    <%=image_tag @teacher.avatar.big.url %>

    <span style="padding-left:10px" class="qa_f18">
        <strong><%= @teacher.name %></strong>
      </span>
    <div class="pull-right">
      <% if allow? "teachers", "edit" %>
          <%=link_to edit_teacher_path(@teacher) do %>
              <button type="button" class="btn btn-xs btn-success">编辑讲师</button>
          <% end %>
      <% end %>
    </div>

  </div>
  <div class="qa_cell">
    <div class="row">
      <div class="col-md-2" style="padding-left:40px"><%=Teacher.human_attribute_name(:mobile)%></div>
      <div class="col-md-9"><%= @teacher.mobile %></div>
    </div>
  </div>
  <div class="qa_cell">
    <div class="row">
      <div class="col-md-2" style="padding-left:40px">学校</div>
      <div class="col-md-9"><%= @teacher.school.name %></div>
    </div>
  </div>
  <div class="qa_cell">
    <div class="row">
      <div class="col-md-2" style="padding-left:40px">类型</div>
      <div class="col-md-9"><%= @teacher.category %></div>
    </div>
  </div>
  <div class="qa_cell">
    <div class="row">
      <div class="col-md-2" style="padding-left:40px">科目</div>
      <div class="col-md-9"><%= @teacher.subject %></div>
    </div>
  </div>
  <div class="qa_cell">
    <div class="row">
      <div class="col-md-2" style="padding-left:40px">邮件</div>
      <div class="col-md-9"><%= @teacher.email %></div>
    </div>
  </div>
  <div class="qa_cell">
    <div class="row">
      <div class="col-md-2" style="padding-left:40px">简介</div>
      <div class="col-md-10">
        <%= @teacher.desc%>
      </div>
    </div>
  </div>
</div>
<div class="qa_sep_15"></div>
<div class="qa_sep_15"></div>

<div class="qa_box">
  <ul class="nav nav-tabs" role="tablist" id="myTab">
    <li role="presentation" class="active">
      <a href="#vip_class" aria-controls="vip_class" role="tab" data-toggle="tab"><%=VipClass.model_name.human%></a>
    </li>
    <li role="presentation">
      <a href="#Curriculum" aria-controls="Curriculum" role="tab" data-toggle="tab"><%=Curriculum.model_name.human%></a>
    </li>
  </ul>

  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="vip_class">
      <div class="qa_box">
        <%= render partial:'teachers/home/learning_plan',collection:@teacher.learning_plans %>
      </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="Curriculum">
      <div class="row groups">
        <%= render partial:'curriculums/curriculum',collection:@curriculums %>
      </div>
    </div>
  </div>
</div>
<script>
    $(function () {
        $('#myTab a:first').tab('show')
    })
</script>