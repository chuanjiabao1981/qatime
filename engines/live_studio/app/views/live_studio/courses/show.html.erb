<%= render 'course_header' %>

<div class="course-con">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="course-item">
          <%= render 'course_tab' %>
          <div class="tab-content asyn_append_fields">
            <!-- 课程介绍 -->
            <%= render 'course_info' %>
            <!-- 课程安排 -->
            <%= render partial: 'course_plan', locals: { lessons: @course.lessons } %>
            <!-- 学习须知 -->
            <%= render 'course_tips' %>
          </div>
        </div>
      </div>

      <%= render partial: "live_studio/shared/teacher_info", locals: { teachers: [ @course.teacher ] } %>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(document).ready(function(){
      $("#taste-course-<%= @course.id %>").bind('ajax:success', function() {
        <% if current_user.present?%>
          window.location.reload();
        <% else %>
          window.location.href = "/signin";
        <% end %>
      });
      $(".tabs").on('click', 'a', function() {
        $(this).addClass("active").siblings().removeClass("active");
      });
    })
  </script>
<% end %>