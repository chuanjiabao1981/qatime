<div class="qa_box">
    <div class="qa_question">
      <div class="qa_header">
        <div class="pull-right">
          <%=image_tag @question.student.avatar.normal.url %>
        </div>
        <div class="qa_title">
          <h1>
            <%= @question.title %>
          </h1>
        </div>
        <div class="qa_info">
          <%=link_to "高中数学","#" %> • <%= @question.student.name %> • 发布于<%= time_ago_in_words(@question.created_at) %>前
        </div>

      </div>
      <div class="qa_content">
        <%= raw @question.content%>
      </div>
      <div class="qa_footer">
        <% if allow? "questions","edit",@question %>
            <%=link_to edit_question_path(@question) do %>
                <i class="fa fa-pencil-square-o"></i>编辑
            <% end %>
        <% end %>

      </div>
    </div>
    <div class="qa_answer">
      <div class="qa_widget">
        <div class="qa_header">
          <h4><%= @question.answers_count%> 个回答</h4>
        </div>
      </div>
      <%= render @question.answers %>

    </div>
    <div class="qa_answer">
      <%= render 'answers/form' %>

    </div>
</div>