<div class="modal fade" id="newMoveModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">移动<%= type %></h4>
      </div>
      <div class="modal-body" id="newProductInput">
        <%= simple_form_for dir do |f| %>
            <%= f.input :title, label: '当前目录', disabled: true %>
            <%= f.association :parent, label: '移动到', collection: get_all_children(dir) %>
            <%= f.button :submit, class: "btn btn-default" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")), '#', :class => 'btn btn-default', data: {dismiss: "modal"} %>
      </div>
    </div>
  </div>
</div>