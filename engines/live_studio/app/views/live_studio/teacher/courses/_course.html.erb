<%= content_tag(:div, class: 'course-box-div') do %>
  <%= content_tag(:div, class: 'course-describe-div') do%>
    <%= content_tag(:div,"#{t('view.course_show.start_time')}#{course.live_start_time}",class: 'describe-ceil') %>
    <%= content_tag(:div,"#{t('view.course_show.end_time')}#{course.live_end_time}",class: 'describe-ceil') %>
    <%= content_tag(:div,"#{t('view.course_show.status')}#{course.status_text}",class: 'describe-ceil') %>
  <% end %>
  <%= content_tag(:div, class: 'course-info-div') do %>
    <%= content_tag(:div, image_tag(course.publicize_url(:list)),class: 'publicize') %>
    <%= content_tag(:div, class: 'course-content-div') do %>
      <%= content_tag(:div,class: 'course-info-col') do %>
        <%= content_tag(:div, course.name, class: 'course-name') %>
        <%= preview_time(course) %>
      <% end %>
      <%= content_tag(:div, "#{t('view.teacher_course.price') % course.price}", class: 'content-ceil-small') %>
      <%= content_tag(:div, "#{t('view.teacher_course.teacher_percentage') % course.teacher_percentage}", class: 'content-ceil-small') %>
      <%= content_tag(:div, "#{t('view.teacher_course.buy_tickets_count') % course.buy_tickets_count}", class: 'content-ceil-small') %>
      <%= content_tag(:div, "#{t('view.teacher_course.subject') % course.subject}", class: 'content-ceil-small') %>
      <%= content_tag(:div, "#{t('view.teacher_course.grade') % course.grade}", class: 'content-ceil-small') %>
      <%= content_tag(:div, "#{t('view.course_show.schedule')}#{course.completed_lesson_count}/#{course.preset_lesson_count}", class: 'content-ceil-small') %>
      <%= content_tag(:div, "#{t('view.teacher_course.next_live_time') % course.live_next_time}") %>
    <%end %>
    <%= content_tag(:div, class: 'course-operator-div') do%>
      <%= content_tag(:div, class: 'course-operator-btn') do %>
        <%= link_to t('view.course_show.info'),teacher_course_path(@teacher,course), class: 'btn btn-default operator-btn' %>
        <%= link_to t('view.course_show.lessons'),teacher_course_path(@teacher,course,index: 'list'), class: 'btn btn-default operator-btn' %>
        <%= link_to t("activerecord.view.course_publish"), publish_course_path(course), method: :patch,
                    class: "btn btn-default operator-btn #{course.cant_publish? ? 'disabled' : nil}",
                    remote: true, 'data-confirm' => t("view.teacher_course.publish_confirm"),
                    id: "course_publish_btn_#{course.id}" if course.init?%>
      <% end %>
    <% end %>
  <% end %>
<% end %>