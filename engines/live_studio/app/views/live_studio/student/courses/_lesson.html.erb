<div class="panel panel-default">
  <div class="panel-heading">
    <strong>课程安排</strong>
  </div>

  <!-- Table -->
  <table class="table">
    <tr>
      <% %w(name se_time date).each do |col| %>
      <th>
        <%= t("activerecord.view.#{col}") %>
      </th>
      <% end %>
    </tr>


    <% @course.lessons.each do |lesson| -%>
      <tr>
        <td>
          <%= lesson.name %>
        </td>
        <td>
          <%= lesson.start_time%> - <%= lesson.end_time%>
        </td>
        <td>
          <%= lesson.class_date %>
        </td>
        <td>
          <% if lesson.can_play? %>
            <%= link_to t("activerecord.view.begin_watch_live_studio"), play_course_lesson_path(@course, lesson) %>
          <% end %>
        </td>
      </tr>
    <% end -%>
  </table>
</div>
