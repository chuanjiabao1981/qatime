<div class="station-title">
  <%= link_to t("live_studio.menu.my_course"),
              live_studio.my_courses_station_workstation_courses_path(@workstation),
              class: "#{'active' if 'live_studio/station/courses' == params[:controller] && 'my_courses' == params[:action]}" if allow?('live_studio/station/courses', 'my_courses', @workstation) %>
  <%= link_to t("live_studio.menu.interactive_course"),
              live_studio.station_workstation_interactive_courses_path(@workstation),
              class: "#{'active' if 'live_studio/station/interactive_courses' == params[:controller] && 'index' == params[:action]}" if allow?('live_studio/station/interactive_courses', 'index', @workstation) %>
  <%= link_to t("live_studio.menu.video_course"),
              live_studio.audits_station_workstation_video_courses_path(@workstation),
              class: "#{'active' if 'live_studio/station/video_courses' == params[:controller] && 'audits' == params[:action]}" if allow?('live_studio/station/video_courses', 'audits', @workstation) %>
  <%= link_to t("live_studio.menu.customized_course"),
              main_app.customized_courses_station_workstation_path(@workstation),
              class: "#{'active' if 'station/workstations' == params[:controller] && 'customized_courses' == params[:action]}" if allow?('station/workstations', 'customized_courses', @workstation) %>
  <%= link_to t("live_studio.menu.curriculums"), main_app.curriculums_path %>
  <%= link_to t("live_studio.menu.question"), main_app.questions_path %>
</div>