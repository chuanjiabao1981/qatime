var index = $("#homework-tab .active").index();
<% if current_user.nil? %>
  $("#homework").html("<%= j render('guest') %>");
<% elsif current_user.student? %>
  $("#homework").html("<%= j render('student') %>");
<% elsif current_user.teacher? %>
  $("#homework").html("<%= j render('teacher') %>");
<% else %>
  $("#homework").html("<%= j render('other') %>");
<% end %>
if(index >=0) {
  $("#homework-tab :eq(" + index + ")").trigger('click');
}
