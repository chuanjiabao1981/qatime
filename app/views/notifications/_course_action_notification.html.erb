<li>
  <div class="row">
    <div class="col-md-9 msg-info">
      <i class="<%= 'unread' unless notification.read %>"></i>
      <%= link_to notification.notificationable.content, notification_path(notification, rt: live_studio.course_path(notification.notificationable)) %>
