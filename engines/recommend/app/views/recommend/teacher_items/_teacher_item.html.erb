<div class="row qa_big_cell">
  <div class="col-md-4"><%= image_tag teacher_item.logo_url, size: '16x16' %></div>
  <div class="col-md-2"><%= link_to teacher_item.target.name, main_app.teacher_path(teacher_item.target) %></div>
  <div class="col-md-2"><%= teacher_item.try(:index) %></div>
  <div class="col-md-2"><%= teacher_item.city.try(:name) %></div>
  <div class="col-md-2">
    <%= link_to '编辑', recommend.edit_teacher_item_path(teacher_item) if allow?("recommend/teacher_items", 'edit')  %>
    <%= link_to '删除', recommend.teacher_item_path(teacher_item), method: :delete, data: {confirm: '确定删除?'} if allow?("recommend/teacher_items", 'destroy')  %>
  </div>
</div>
