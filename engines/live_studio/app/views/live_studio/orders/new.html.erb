<div class="qa_box">
  <div class="qa_big_cell">
    <h2>购买 <%= LiveStudio::Course.model_name.human %></h2>
  </div>
  <div class="qa_big_cell">
    <%= simple_form_for [:course, @order] do |f|%>
      <div><%= f.label :name %> <%= @course.name %></div>
      <div><%= f.label :teacher %> <%= @course.teacher_name %></div>
      <div><%= f.label :price %> <%= @course.price %></div>
      <div><%= f.label :description %> <%= @course.name %></div>
      <div><%= f.input :pay_type, as: :radio_buttons, collection: ::Order.pay_types %> </div>
      <%= f.button :submit, class: "btn btn-default" %>
    <% end %>
  </div>
</div>
