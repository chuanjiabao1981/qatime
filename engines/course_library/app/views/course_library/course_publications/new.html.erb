<%=render 'course_library/courses/header'%>
<div class="qa_box">
<div class="qa_big_cell">
      <%= simple_form_for [@course,@course_publication] do |f| %>
          <%= f.association :customized_course,collection: available_customized_course_for_publish(@course),
                      label_method: lambda {|cc| "#{cc.name}(学生： #{cc.student.name})"},
                      include_blank: false%>
          <%= f.input :publish_lecture_switch %>
          <%= f.association :homeworks ,as: :check_boxes,collection: @course.homeworks%>
          <%= f.button :submit, "发布课程",class: "btn btn-default"%>
    <% end %>
</div>
</div>
