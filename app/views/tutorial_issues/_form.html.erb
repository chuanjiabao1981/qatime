<div class="qa_box">
  <div class="qa_cell box_head">
    <%= render partial: 'tutorial_issues/nav',locals: {customized_tutorial: @tutorial_issue.customized_tutorial} %>
    /
    <% if @tutorial_issue.new_record? %>
        发起
    <% else %>
        编辑
    <% end %>
    <%= TutorialIssue.model_name.human%>
  </div>
  <div class="qa_cell">
    <%= simple_form_for([@tutorial_issue.customized_tutorial,@tutorial_issue]) do |f| %>
        <%= render partial: "shared/topics/form",locals: {f: f} %>
        <div class="form-group">
          <%= f.button :submit, class: "btn btn-default" %>
        </div>
    <% end %>
  </div>
</div>
