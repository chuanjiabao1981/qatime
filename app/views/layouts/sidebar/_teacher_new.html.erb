<% @teacher ||= @current_resource -%>
<div style="border: 1px solid; padding: 6px">
  <center>
    <%= image_tag @teacher.avatar_url(:big) %><br/>
    <%= @teacher.name %>
  </center>

  <ul class="menu" style="color: white">
    <li>
      <%= link_to info_teacher_path(@teacher) do %>
        <span class="fa fa-info-circle"></span>
        <span class="qa_f18"><%= t("view.common_bars.user_setting") %></span>&nbsp;&nbsp;
        <span class="glyphicon <%= teacher_sidebar_nav_is?(:setting) ? 'glyphicon-chevron-left' : 'glyphicon-chevron-right' %>"></span>
      <% end %>
    </li>
    <li>
      <%= link_to payment.user_change_records_path(@teacher) do %>
        <span class="fa fa-usd"></span>
        <span class="qa_f18"><%= t "view.teacher_bars.property_management" %></span>&nbsp;&nbsp;
        <span class="glyphicon glyphicon-chevron-right"></span>
      <% end %>
    </li>
    <li>
      <%= link_to "##" do %>
        <span class="fa fa-calendar"></span>
        <span class="qa_f18"><%= t "view.teacher_bars.curriculum_schedule" %></span>&nbsp;&nbsp;
        <span class="glyphicon glyphicon-chevron-right"></span>
      <% end %>
    </li>
    <li>
      <%= link_to live_studio.teacher_courses_path(@teacher) do %>
        <span class="fa fa-users"></span>
        <span class="qa_f18"><%= t "view.teacher_bars.my_courses" %></span></span>&nbsp;&nbsp;
        <span class="glyphicon glyphicon-chevron-right"></span>
      <% end %>
    </li>
    <li>
      <%= link_to "##" do %>
