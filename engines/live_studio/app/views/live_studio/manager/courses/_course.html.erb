<tr>
  <td><%= course_counter + 1 %></td>
  <td>
    <%= link_to course.name, manager_course_path(@manager, course) %>
  </td>
  <td>
    <%= course.teacher_name %>
  </td>
  <td>
    <%= course.short_description %>
  </td>
  <td><%= course.status_text %></td>
  <td>
    <%= allow_link_to({action: 'edit', url: edit_manager_course_path(@manager, course), variable: course }) {t("activerecord.view.edit")} %>
    <%= allow_link_to({action: 'destroy', url: manager_course_path(@manager, course), variable: course,
                       sub: {method: :delete, id: "delete_#{course.id}", 'data-confirm' => t('activerecord.view.message.confirm')}}) {t("activerecord.view.delete")} %>
    <%# =link_to t("activerecord.view.edit"), edit_manager_course_path(@manager, course) if allow?("live_studio/manager/courses", "update", @manager) %>
    <%# =link_to t("activerecord.view.delete"), manager_course_path(@manager, course), method: :delete,
               'data-confirm' => t('activerecord.view.message.confirm') if allow?("live_studio/manager/courses", "destroy", @manager) %>
  </td>
</tr>
