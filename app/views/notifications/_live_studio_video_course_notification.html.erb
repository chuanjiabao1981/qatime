<div class="qa_object_item" style="clear: both;">
  <div style="float:left">
    <label class="logo" style="background-color: #FFCCCC;">
      <%= t("view.notification.label.live_studio_video_course.#{notification.action_name}") %>
    </label>
  </div>

  <div class="title">
    <% if notification.read %>
      <span class="label label-default"><%= I18n.t "view.notification.read" %></span>
    <% else %>
      <span class="label label-danger"><%= I18n.t "view.notification.unread" %></span>
    <% end %>
    
    <% if notification.action_name.to_sym == LiveStudioCourseNotification::ACTION_NOTICE_CREATE %>
      <%= t("view.notification.live_studio/video_course.#{notification.action_name}", content: notification.notificationable.chat_team.try(:announcement), teacher_name: notification.notificationable.teacher.name) %>
    <% else %>
      <%= t("view.notification.live_studio/video_course.#{notification.action_name}", course_name: notification.notificationable.name, day: notification.notificationable.class_date) %>
    <% end %>

    <% if @receiver.student? -%>
      <%= link_to t("view.course_show.info"), notification_path(notification, rt: live_studio.student_video_courses_path(@receiver)) %>
    <% elsif @receiver.teacher? -%>
      <%= link_to t("view.course_show.info"), notification_path(notification, rt: live_studio.teacher_video_courses_path(@receiver)) %>
    <% else -%>
    <% end -%>
  </div>
  <div class="info">
    <%= localize(notification.created_at, format: :long) %>
  </div>
</div>
