  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t("view.common_bars.aqtime"), live_studio.teacher_courses_path(teacher), class: "navbar-brand" %>
    </div>

    <div class="navbar-collapse collapse" style="height: 1px;">
      <ul class="nav navbar-nav">
        <li><%= link_to t("view.common_bars.home_page"), live_studio.teacher_courses_path(teacher) %></li>
        <li><%= link_to t("view.common_bars.customized_courses"), customized_courses_teacher_path(teacher) %></li>
        <li><%= link_to t("view.common_bars.curriculums"), curriculums_path %></li>
        <li><%= link_to t("view.common_bars.questions"), questions_path %></li>
