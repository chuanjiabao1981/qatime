<div class="row" style="padding:10px 10px 10px 10px;border-bottom: 1px solid #e2e2e2">
  <div class="col-md-1">
    <%= solution_counter + 1 %>
  </div>
  <div class="col-md-5">
    <%= link_to solution.title, solution_path(solution) %>
  </div>
  <div class="col-md-1">
    <%= link_to '删除', mark_delete_solution_path(solution), :method => :delete, :data => { confirm:'确定删除?' } %>
  </div>
</div>