<div class="panel panel-default">
  <div class="addinvite">
    <div class="addinvite-title">
      <div class="addinvite-title-left">
        <%= link_to t("live_studio.menu.teacher.my_#{@course.model_name.route_key}"), live_studio.send("teacher_#{@course.model_name.route_key}_path", current_user) %>
        <span>&gt;</span>
        <span><%= t("common.announcement") %></span>
      </div>
      <div class="addinvite-title-right">
        <a href="javascript:void(0);" data-toggle="modal" data-target="#announcement-form">
          <span><%= t("common.create_announcement") %></span>
        </a>
      </div>
    </div>
    <div class="adjust-lesson">
      <div class="adjust-title"><%= @course.name  %></div>
    
      <div class="adjust-con">
        <div class="adjust-con-title">
          <span><%= @course.grade %><%= LiveStudio::Course.human_attribute_name(:grade) %></span>
          <span>|</span>
          <span><%= LiveStudio::Course.human_attribute_name(:lessons_progress) %></span>
          <span><%= @course.finished_lessons_count %>/<%= @course.lessons_count %></span>
        </div>
      </div>
      <div class="notice-news">
        <table border="0" cellspacing="0" cellpadding="0">
          <tbody>
           <%= render @announcements %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="announcement-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="add-popup add-notice" >
      <div class="popup-title">
        <span><%= t("common.create_announcement") %></span>
        <span class="close fa fa-times" data-dismiss="modal" aria-label="Close"></span>
      </div>
      <%= render 'form' %>
    </div>
  </div>
</div>