<div class="qa_box">
  <div class="qa_big_cell">
    <div>
      <h2>
        软件列表
        <%=link_to new_admins_software_path do %>
          <button type="button" class="btn btn-xs btn-success">新增</button>
        <% end %>
        <%=link_to admins_software_categories_path do %>
          <button type="button" class="btn btn-xs btn-success">分类管理</button>
        <% end if allow? 'admins/software_categories', :index %>
      </h2>
    </div>

  </div>
  <div class="row qa_big_cell">
    <div class="col-md-1">
      序号
    </div>
    <div class="col-md-3">
      <%= Software.human_attribute_name(:title) %>
    </div>
    <div class="col-md-1">
      <%= Software.human_attribute_name(:platform) %>
    </div>
    <div class="col-md-2">
      <%= Software.human_attribute_name(:category) %>
    </div>
    <div class="col-md-1">
      <%= Software.human_attribute_name(:version) %>
    </div>
    <div class="col-md-1">
      <%= Software.human_attribute_name(:status) %>
    </div>
  </div>
  <div>
    <%= render @softwares %>
  </div>
</div>