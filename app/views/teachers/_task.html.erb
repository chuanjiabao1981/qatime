<div class="qa_box">
  <div class="qa_big_cell_without_border">
    <div class="row">
      <div class="col-md-4">
        <h2>
          我的问答任务
        </h2>

      </div>

    </div>

  </div>

  <div role="tabpanel" style="padding-left: 1px">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class=<%= "active" if action_name == "solutions" %>>
        <%=link_to CustomizedCourse.human_attribute_name(:solutions),solutions_teacher_path(@teacher) %>
      </li>
      <li role="presentation" class=<%= "active" if action_name == "customized_tutorial_topics" %>>
        <%=link_to "#{CustomizedCourse.model_name.human}中向您提的问题",customized_tutorial_topics_teacher_path(@teacher) %>
      </li>

      <li role="presentation" class=<%= "active" if action_name == "homeworks" %>>
        <%=link_to "您在#{CustomizedCourse.model_name.human}中布置的#{CustomizedCourse.human_attribute_name(:homeworks)}",homeworks_teacher_path(@teacher) %>
      </li>

      <li role="presentation" class=<%= "active" if action_name == "questions" %>>
        <%=link_to "#{VipClass.model_name.human}中向您提的问题",questions_teacher_path(@teacher) %>
      </li>


      <li role="presentation" class=<%= "active" if action_name == "topics" %>>
        <%=link_to "#{Curriculum.model_name.human}中向您提的问题",topics_teacher_path(@teacher) %>
      </li>

    </ul>
  </div>

  <%= yield %>

</div>