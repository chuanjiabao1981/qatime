<div class="qa_box">
  <div class="qa_big_cell">
    <h2>班级</h2>
  </div>
  <div class="qa_big_cell">
    <%=simple_form_for [:admins,@group] do |f| %>
        <%= f.input :grade,collection: t(:grades),:include_blank => false %>
        <%= f.input :subject,collection: t(:subjects),:include_blank => false %>
        <%= f.input :name %>

      <%= f.association :teacher, :collection => User.all.collect { |u| ["#{u.school.try(:name)}-#{u.name}",u.id] },:include_blank => false  %>
        <%= f.button :submit, class: "btn btn-default" %>
    <% end %>
  </div>
</div>