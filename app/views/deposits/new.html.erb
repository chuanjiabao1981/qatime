<div class="qa_box">
  <div class="qa_big_cell">
    <div class="row">
        <div class="col-md-4">
            <h2>
            <%= Account.human_attribute_name(:deposit)%>
            </h2>
            <span class="label label-success">
                <%= @account.user.name %>
            </span>
        </div>
        <div class="col-md-4">
        </div>
    </div>
  </div>
  <div class="qa_big_cell">
    <%= simple_form_for @cash_operation_record do |f| %>
        <%= f.input :deposit_amount %>
        <%= f.submit Account.human_attribute_name(:deposit),class:"btn btn-default"  %>
    <% end %>
  </div>
</div>