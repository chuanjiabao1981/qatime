<%= render layout: "#{@topic.topicable.model_name.route_key.downcase}/topic_show_layout" do %>
    <div class="qa_box">
      <div class="qa_topic">
          <div class="header">
            <div class="qa_cell" style="background-color: #f5f5f5">
              <div class="pull-right">
                <%=image_tag @topic.author.avatar.normal.url %>
              </div>

              <div class="title">
                <h4><%= @topic.title %></h4>
              </div>
              <div style="color:gray;font-size: 10px;">
                <%= @topic.author.name %> •  <%= localize(@topic.created_at,:format => :long) %> 创建
              </div>
            </div>
          </div>
          <div class="content">
            <div class="qa_cell">
              <div>
                <%= @topic.content.html_safe %>
              </div>
              <div class="pull-right">
                <% if allow? :topics,:edit ,@topic%>
                    <%= link_to "", edit_topic_path(@topic), class: "glyphicon glyphicon-edit"%>
                <% end %>
                <% if allow? :topics, :destroy ,@topic%>
                    <%= link_to "", topic_path(@topic),
                            :method => :delete,
                            'data-confirm' => 'Are you sure?',
                            class: "glyphicon glyphicon-remove"%>
                <% end %>
              </div>
              <div style="clear: both"></div>
            </div>
          </div>
      </div>
    </div>

  <div class="qa_sep_15"></div>
  <div class="qa_sep_15"></div>

    <div class="qa_box">
      <div class="qa_replies">
        <div class="qa_header">
          共收到 <b><%= @topic.replies_count %></b> 条回复
        </div>
        <%= render partial: 'replies/reply',collection: @replies%>
      </div>

      <div class="qa_cell">
        <%= will_paginate @replies ,renderer: BootstrapPagination::Rails %>
      </div>
    </div>

  <div class="qa_sep_15"></div>
  <div class="qa_sep_15"></div>

  <div class="qa_box">
      <%= render 'replies/form' %>
    </div>
<% end %>
