<div class="col-md-9">
  <div class="qa_box">
    <div class="qa_topic">
      <div class="header">
        <div class="qa_cell" style="background-color: #f5f5f5">
          <div class="title">
            <h4><%= @faq.name %></h4>
          </div>
        </div>
      </div>
      <div class="content">
        <div class="qa_cell">
          <div>
            <%= @faq.desc.html_safe %>
          </div>
          <div class="pull-right">
            <%= link_to "", edit_faq_path(@faq), class: "glyphicon glyphicon-edit"%>
            <%= link_to "", faq_path(@faq),
                        :method => :delete,
                        'data-confirm' => 'Are you sure?',
                        class: "glyphicon glyphicon-remove"%>
          </div>
          <div style="clear: both"></div>
        </div>
      </div>
    </div>

  </div>
</div>