<script type="text/javascript" charset="utf-8">
  $('.btn-pay').click(function(){
    $('.btn-pay').removeClass('active');
    $(this).addClass('active');
    var pay_type = $(this).attr('rel');
    $('#order_pay_type').val(pay_type);
  });
  $('#new_order').submit(function(){
    if($('#order_pay_type').val() == ''){
      alert('请选择支付方式');
      return false;
    }
    $(this).submit();
  });
</script>