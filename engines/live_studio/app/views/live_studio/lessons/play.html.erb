<% content_for :stylesheet do %>
  <link href="http://nos.netease.com/vod163/nep.min.css" rel="stylesheet">
<% end %>
<% content_for :javascript do %>
  <script src="http://nos.netease.com/vod163/nep.min.js"></script>
<% end %>

<% channel = @course.channels.first %>
<%= channel.name %>
<video id="my-video" class="video-js" controls poster="<%= image_url('publish-bg.png') %>" preload="auto" width="640" height="480" data-setup='{}'>
    <source "src"="MY_VIDEO.mp4" type="video/mp4">
</video>
<script>
var myPlayer = neplayer("my-video", {}, function() {
});
myPlayer.setDataSource({
  type: "rtmp/flv",
  src: "<%= channel.pull_streams.last.address %>"
});

myPlayer.play();

</script>
