<%= content_tag(:div, class: 'course-box-div') do %>
  <%= content_tag(:div, class: 'course-describe-div') do%>
    <%= content_tag(:div,"#{t('view.course_show.start_time')}#{localize(interactive_course.start_at, format: :long)}",class: 'describe-ceil') %>
    <%= content_tag(:div,"#{t('view.course_show.end_time')}#{localize(interactive_course.end_at, format: :long)}",class: 'describe-ceil') %>
    <%= content_tag(:div,"#{t('view.course_show.status')}#{interactive_course.status_text}#{interactive_course.bought_by?(@student) ? nil : t('view.course_show.taste')}", class: 'describe-ceil') %>
  <% end %>

  <%= content_tag(:div, class: 'course-info-div') do %>
    <%= content_tag(:div, image_tag(interactive_course.publicize_url(:list)),class: 'publicize') %>
    <%= content_tag(:div, class: 'course-content-div') do %>
      <%= content_tag(:div,class: 'course-info-col') do %>
        <%= content_tag(:div, interactive_course.name, class: 'course-name') %>
        <%= preview_time(interactive_course) if interactive_course.published? %>
      <% end %>
      <%= content_tag(:div, "#{t('view.course_show.subject')}#{interactive_course.subject}", class: 'content-ceil') %>
      <%= content_tag(:div, "#{t('view.course_show.teacher')}#{interactive_course.teacher.try(:name)}", class: 'content-ceil') %>
      <%= content_tag(:div, "#{t('view.course_show.schedule')}#{interactive_course.finished_lessons_count}/#{interactive_course.lessons_count}", class: 'content-ceil') %>
      <%= content_tag(:div, "#{t('view.course_show.surplus')}#{interactive_course.left_lessons_count} #{t('view.course_show.lesson_time')}", class: 'content-ceil') %>
      <%= content_tag(:div, "#{t('view.course_show.current')}#{interactive_course.current_lesson_name}") %>
    <%end %>
    <%= content_tag(:div, class: 'course-operator-div') do%>
      <%= content_tag(:div, link_to(t('activerecord.view.buy'), new_course_order_path(course), id: "buy-course-#{interactive_course.id}",class: 'btn btn-default font-red'),
                      class: 'course-buy-btn') if current_user == @student && !interactive_course.bought_by?(@student) %>
      <%= content_tag(:div, class: 'course-operator-btn') do %>
      <% end %>
    <% end %>
  <% end %>
<% end %>