<li>
  <div class="row">
    <div class="col-md-9 msg-info">
      <i class="<%= 'unread' unless notification.read %>"></i>
      <%= link_to notification.notificationable.desc, notification_path(notification, rt: main_app.send("#{notification.notificationable.actionable.model_name.singular_route_key}_path", notification.notificationable.actionable)) %>
    </div>

    <div class="col-md-3 msg-item">
      <span><%= localize(notification.created_at,format: :long) %></span>
    </div>
  </div>
</li>