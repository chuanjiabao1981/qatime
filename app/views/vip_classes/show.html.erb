<div class="qa_box">

</div>
<div class="qa_box">
  <div class="qa_vip_class">
    <div class="qa_header">
      <%=link_to questions_path do %>
        <span class="qa_f16">全部VIP</span> »
      <% end %>
      <span class="qa_f16"><%= @vip_class.category %><%= @vip_class.subject %></span>
      <i class="<%="#{APP_CONSTANT["vip_class_icons"][@vip_class.subject]["icon"]}"%>"></i>
        <div class="qa_info">
            共有<%= @vip_class.questions_count %>个讨论
        </div>
    </div>

  </div>
  <% if @questions.size == 0 %>
      <div style="text-align: center;">
        <div class="qa_sep_15"></div>
        还没有问题！
        <%=link_to new_question_path , class:"btn btn-default btn-big" do %>
            <i class="fa fa-pencil"></i> 提问
        <% end %>
        <div class="qa_sep_15"></div>
      </div>
  <% else %>
  <div class="qa_question">
    <%=render @questions %>
  </div>
  <% end %>


</div>