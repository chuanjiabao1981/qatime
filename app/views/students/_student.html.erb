<div class="qa_cell">
  <div class="row" style="padding-left: 10px">
    <div class="col-md-1"><%=   student_counter+1  %></div>
    <div class="col-md-2"><%=link_to student.name , student_path(student)%></div>
    <div class="col-md-2"><%= student.email %></div>
    <div class="col-md-3"><%= student.created_at.to_date%></div>
    <% if allow? :students,:destroy %>
    <div class="col-md-2">
      <%=link_to '删除',student_path(student),method: :delete, 'data-confirm'=>'你确定删除此学生么?'%>
    </div>
    <% end %>
    <% if allow? :students, :admin_edit %>
    <div class="col-md-2">
      <%= link_to admin_edit_student_path(student), method: :get, :remote => true, id: "student_#{student.id}" do %>
        <%= t(".edit_student") %>
      <% end %>
    </div>
  <% end %>
  </div>
</div>

<div class="row" id="student_edit_<%= student.id %>" style="display: none;padding:10px 36px 10px 36px;border-bottom: 1px solid #e2e2e2">
</div>
