<% if signed_in? %>
  <% if current_user.student? %>
    <%= render partial: 'layouts/topbar/student', locals: { student: current_user } %>
  <% elsif current_user.teacher? %>
    <%= render partial: 'layouts/topbar/teacher', locals: { teacher: current_user } %>
  <% else %>
    <%= render 'layouts/topbar/admin_or_manager' %>
  <% end %>
<% else %>
  <%= render 'layouts/topbar/unsigned' %>
<% end %>
