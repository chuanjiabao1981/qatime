<div class="row" style="padding:10px 10px 10px 10px;border-bottom: 1px solid #e2e2e2">
  <div class="col-md-1">
    <%= homework_counter + 1 %>
  </div>
  <div class="col-md-3">
    <%= link_to homework.title, homework_path(homework) %>
  </div>
  <div class="col-md-1">
    <%= link_to '编辑', edit_homework_path(homework) %>
  </div>
  <div class="col-md-1">
    <%= link_to '删除', mark_delete_homework_path(homework), :method => :delete, :data => { confirm:'确定删除?' } %>
  </div>
</div>