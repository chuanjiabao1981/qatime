<tr>
  <td><%= course_counter + 1 %></td>
  <td><%= link_to course.name, live_studio.course_path(course) %></td>
  <td><%= course.teacher_name %></td>
  <td><%= course.short_description %></td>
  <td><%= course.current_price %></td>
  <td>
    <% if(current_user.student?) %>
    <%= render partial: "student_operate", locals: {course: course}  %>
    <% elsif current_user.teacher? %>
    <%= render partial: "teacher_operate", locals: {course: course}  %>
    <% else %>
    <%= render partial: "manager_operate", locals: {course: course}  %>
    <% end %>
  </td>
</tr>
