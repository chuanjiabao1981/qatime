<% if @course.published? %>
  <%= link_to(t('view.course_info_show.start_learning'), "javascript:alert('#{t('view.live_studio/courses.show.learn_alert')}');", class: 'action btn-startclass') %>
<% else %>
  <%= link_to t('view.course_info_show.start_learning'), live_studio.play_course_path(@course), class: 'action btn-startclass', target: '_blank' %>
<% end %>
