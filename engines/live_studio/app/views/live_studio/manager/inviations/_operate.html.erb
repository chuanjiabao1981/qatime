<% case inviation.status %>
<% when 'sent' %>
  <% if allow?("live_studio/manager/inviations", "cancel", current_user) %>
    <%= link_to '取消', cancel_manager_inviation_path(@manager.id, inviation.id), method: :patch%>
  <% end %>
<% when 'accepted' %>
<% else %>
  <% if allow?("live_studio/manager/inviations", "show", current_user) %>
    <%= link_to '重发', manager_inviation_path(@manager.id, inviation.id)%>
  <% end -%>
<% end %>
