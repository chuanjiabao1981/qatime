<% if available_customized_courses(@course,@teacher).length !=0 %>
<%= simple_form_for @course ,url: course_publications_path(@course),method: :post  do |f| %>
    <%= f.association :customized_courses ,
                      as: :check_boxes ,
                      collection: available_customized_courses(@course,@teacher),
                      label_method: lambda {|cc| "#{cc.name} | #{cc.student.name}"}
    %>
    <%= f.button :submit, "发布课程"%>
<% end %>
<% else %>

    <%= link_to t("view.course_library/publication.no_customized_course_available") ,
        course_publications_path(@course) %>
<% end %>