<!DOCTYPE html>
<html lang="cn">
<head>
  <meta name="renderer" content="webkit">

  <title>Qatime</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => false %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => false %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/top_bar' %>

<div class="container">
  <div class='row'>
    <div class="col-md-12">
      <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
    </div>
    <div class='col-md-2'>

      <ul class="menu" style="color: white">
        <li>
          <%= link_to teachers_path do %>
              <span class="glyphicon glyphicon-user"></span> <span class="qa_f18"> 教师</span> Info
          <% end %>
        </li>
        <li>
          <%= link_to schools_path do %>
              <span class="glyphicon glyphicon-home"></span> <span class="qa_f18"> 学校</span> School
          <% end %>
        </li>
        <li>
          <%= link_to managers_register_codes_path do %>
              <span class="glyphicon glyphicon-question-sign"></span>
              <span class="qa_f18">
                <%= RegisterCode.model_name.human%>
              </span>
          <% end %>
        </li>
        <li>
          <%= link_to state_managers_lessons_path(manager_id:current_user.id) do %>
              <span class="glyphicon glyphicon-list-alt"></span> <span class="qa_f18"> 状态</span> State
          <% end %>
        </li>
        <li>
          <%= link_to signout_path, :method=>'delete'  do %>
              <span class="glyphicon glyphicon-log-out"></span> <span class="qa_f18"> 退出</span> Exit
          <% end %>
        </li>
      </ul>
    </div>
    <div class='col-md-10'>
      <%= yield %>
    </div>
  </div>
  <%= debug(params) if Rails.env.development? %>
</div>

</body>
</html>
