
<div class="qa_box">
    <div class="qa_question">
      <div class="qa_header">
        <div class="pull-right">
          <%=image_tag @question.student.avatar.normal.url %>
        </div>
        <div class="qa_title">
          <h1>
            <%= @question.title %>
          </h1>
        </div>
        <div class="qa_info">
          <%=link_to "高中数学","#" %> • <%= @question.student.name %> • 发布于<%= time_ago_in_words(@question.created_at) %>前
        </div>

      </div>
      <div class="qa_content">
        <%= raw @question.content%>
      </div>
      <div class="qa_footer">
        <% if allow? "questions","edit",@question %>
            <%=link_to edit_question_path(@question) do %>
                <i class="fa fa-pencil-square-o"></i>编辑
            <% end %>
        <% end %>
        <div class="pull-right">
            <%= link_to new_question_answer_path(@question) , class:"btn btn-danger btn-xs" do%>
              <i class="fa fa-trash-o fa-lg"></i> 回答问题</a>
        <% end %>
        </div>
        <div style="clear:both"></div>
      </div>
    </div>
</div>