
<% if current_user.blank? %>
  <%= link_to t('activerecord.view.enroll_now'), live_studio.new_interactive_course_order_path(@course), class: 'btn-addclass' %>
<% elsif @course.bought_by?(current_user) %>
  <%= link_to t('view.course_info_show.start_learning'), live_studio.play_interactive_course_path(@course), class: 'btn-startclass', target: '_blank' if @course.published? || @course.teaching? %>
<% else %>
  <% if @course.started_lessons_count > 0 -%>
    <%= link_to t('activerecord.view.enroll_now'), live_studio.new_interactive_course_order_path(@course), data: { confirm: t("view.course_info_show.buy_teaching_course_tips") }, class: 'btn-addclass' %>
  <% else -%>
    <%= link_to t('activerecord.view.enroll_now'), live_studio.new_interactive_course_order_path(@course), class: 'btn-addclass' %>
  <% end %>
<% end %>
