<div class="row qa_big_cell">
  <div class="col-md-2"><%= image_tag live_studio_course_item.logo, size: '16x16' %></div>
  <div class="col-md-2"><%= link_to live_studio_course_item.target.name, live_studio.course_path(live_studio_course_item.target) %></div>
  <div class="col-md-2"><%= live_studio_course_item.try(:index) %></div>
  <div class="col-md-2"><%= live_studio_course_item.reason_text %></div>
  <div class="col-md-2"><%= live_studio_course_item.city.try(:name) %></div>
  <div class="col-md-2">
    <%= link_to '编辑', recommend.edit_live_studio_course_item_path(live_studio_course_item) if allow?("recommend/live_studio_course_items", 'edit')  %>
    <%= link_to '删除', recommend.live_studio_course_item_path(live_studio_course_item), method: :delete, data: {confirm: '确定删除?'} if allow?("recommend/live_studio_course_items", 'destroy')  %>
  </div>
</div>
