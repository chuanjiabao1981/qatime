<div class="qa_box">
  <div class="qa_big_cell">
    <div>
      <h2> <%= LiveStudio::Course.model_name.human %>
      </h2>
    </div>

    <div>
      <%= form_tag("", method: "get") do -%>
        <%= label_tag(t(:category)) %>
        <%= select_tag :category, options_for_select(APP_CONSTANT["grades_in_menu"]) %>

        <%= label_tag(t(:subject)) %>
        <%= select_tag :subjects, options_for_select(APP_CONSTANT["subjects"]) %>

        <%= label_tag(t(:teacher)) %>
        <%= text_field_tag :teacher %>
        <%= submit_tag "搜索" %>
      <% end -%>
    </div>

  </div>
  <div>
  <% @courses.each do |course| -%>
    <div class="row qa_big_cell">
      <div class="col-md-1">
        <%= 1 %>
      </div>
      <div class="col-md-2">
        <%= course.name%>
      </div>
      <div class="col-md-2">
        <%= course.teacher_name %>
      </div>
      <div class="col-md-2">
      </div>
      <div class="col-md-2">
        <%= link_to '立即购买', new_course_order_path(course), id: "buy-course-#{course.id}" if course.can_buy?(current_user) %>
      </div>
    </div>
  <% end -%>
  </div>
</div>