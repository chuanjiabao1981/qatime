<%= content_tag 'div', id:'qa_picture_params',data:{token: @topic.token,picture_type: @topic.class.to_s} do %>
<% end %>
<div class="qa_box">
    <div class="qa_cell">
      <div class="progress" id="picture-progress">
        <div class="progress-bar" id="picture-progress-bar" role="progressbar" >
        </div>
      </div>

      <%=simple_form_for([@lesson,@topic]) do |f| %>
          <%= render "shared/error_messages", :target => @topic %>
          <%= f.input :token, as: :hidden, input_html: {value: f.object.token} %>
          <div class="form-group">
            <%= f.input :title ,input_html:{class:'form-control'}  %>
          </div>

          <div class="form-group">
            <%= f.input :body,:input_html => { :data => {:provider => "summernote"} }  %>

          </div>
          <div class="form-group">
            <%= f.button :submit, class: "btn btn-default" %>
          </div>
      <% end %>
    </div>

</div>
