<div>
  <span class="ordinal-number"><%= format('%02d', task_item_counter + 1) %></span> 
  <p><%= task_item.body %></p>
  <p class="image-box">
    <% task_item.attachments.select(&:image?).each do |attach| %>
      <span>
        <%= link_to image_tag(attach.file_url), attach.file_url, class: 'fancybox-effects-a' %>
      </span>
    <% end %>
  </p>

  <% task_item.attachments.select(&:audio?).each do |attach| %>
    <p>
      <span class="weixinAudio">
        <audio src="<%= attach.file_url %>" class="media"></audio>
        <span class="db audio_area">
          <span class="audio_wrp db">
            <span class="audio_play_area">
              <i class="icon_audio_default"></i>
              <i class="icon_audio_playing"></i>
            </span>
          </span>
          <span class="audio_length tips_global"></span>
        </span>
      </span>
    </p>
  <% end %>
</div>
