<div class="article">
  <div class="work-station">
    <%= render 'station/students/tab' %>
    <%= render 'station/students/search' %>

    <div class="sold-tab">
      <table border="0" cellspacing="0" cellpadding="0">
        <tbody>
          <tr>
            <th><%= t('common.index_no') %></th>
            <th><%= t('view.station.students.index.name') %></th>
            <th><%= t('view.station.students.index.login_mobile') %></th>
            <th><%= t('view.station.students.index.parent_phone') %></th>
            <th><%= t('view.station.students.index.grade') %></th>
            <th><%= t('common.operate') %></th>
          </tr>

          <%= render partial: 'station/students/student', collection: @students %>
        </tbody>
      </table>

      <%= render 'shared/blank' if @students.blank? %>
      <center><div class="pagination-fix"><%= will_paginate @students, class: 'paging', previous_label: '←', next_label: '→' %></div></center>
    </div>
  </div>
</div>