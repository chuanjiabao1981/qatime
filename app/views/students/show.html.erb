<div class="qa_box">
  <div class="qa_big_cell">
    <%=image_tag @student.avatar.big.url %>
    <span style="padding-left:10px" class="qa_f18">
        <strong><%= @student.name %></strong>
    </span>
    <div class="pull-right">
      <%=link_to edit_student_path(@student) do %>
          <button type="button" class="btn btn-xs btn-success">编辑信息</button>
      <% end %>
    </div>
  </div>
  <div class="qa_cell">
    <div class="row">
      <div class="col-md-2" style="padding-left:40px">邮件</div>
      <div class="col-md-9"><%= @student.email %></div>
    </div>
  </div>
  <div class="qa_cell">
    <div class="row">
      <div class="col-md-2" style="padding-left:40px">金币</div>
      <div class="col-md-2"><%= @student.account.money %> ¥</div>
      <div class="col-md-1">
        <%=link_to "#" do %>
            <!--button type="button" class="btn btn-xs btn-success">充值</button-->
            <%=link_to '充值',new_students_recharge_record_path ,class:"btn btn-xs btn-success"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="qa_sep_15"></div>
<div class="qa_sep_15"></div>
<div class="qa_sep_15"></div>
<div class="qa_box box_header qa_cell">
  <%= link_to "定制"+LearningPlan.model_name.human ,new_learning_plan_path(student_id: @student.id) %>
</div>
<div class="qa_box">

  <%= render partial:'learning_plans/learning_plan',collection:@student.learning_plans %>
</div>
