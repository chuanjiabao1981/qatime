<div class="contains">
  <%= render 'title' %>
  <div class="contains-discipline">
    <div class="wallet">
      <%= render "student_cash_info" if @current_resource.student? -%>
      <%= render "teacher_cash_info" if @current_resource.teacher? -%>
      <div class="account-list">
        <table border="0" cellspacing="0" cellpadding="0">
          <tbody>
            <tr>
              <td><%= Payment::Recharge.human_attribute_name(:amount) %></td>
              <td><%= Payment::Recharge.human_attribute_name(:transaction_no) %></td>
              <td><%= Payment::Recharge.human_attribute_name(:pay_type) %></td>
              <td><%= Payment::Recharge.human_attribute_name(:created_at) %></td>
              <td><%= Payment::Recharge.human_attribute_name(:status) %></td>
            </tr>
            <%= render @recharges %>
          </tbody>
        </table>
        <%= render 'shared/blank' if @recharges.blank? %>
        <center>
          <div class="pagination-fix"><%= will_paginate @recharges, class: 'paging', previous_label: '←', next_label: '→' %></div>
        </center>
      </div>
    </div>
  </div>
</div>