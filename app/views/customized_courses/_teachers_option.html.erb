<%= simple_form_for [@student,@customized_course] do |f|%>
    <%= f.association :teachers ,
                      collection: @teachers.map {|t|[t.name,t.id,t.school.try(:name)]}.group_by{|k| k[2]},
                      :as => :grouped_select,
                      :group_method => :last,
                      :label => false,
                      input_html: {
                                    id: 'customized-courses-teachers',
                                    multiple: true
                      }
    %>
<% end%>