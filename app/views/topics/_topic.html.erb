<div class="qa_cell topics_item">
    <div class="pull-left">
      <%=image_tag topic.user.avatar.normal.url %>
    </div>

    <div class="topic">
        <div class="title">
            <%= link_to topic.title, topic_path(topic) %>
        </div>
        <div class="info">
            <span class="node"> <%= topic.node.name %> </span>   • <%= topic.user.name %> • <%= time_ago_in_words(topic.created_at) %>
        </div>
    </div>
    <div class="reply_count">
        <span class="badge"><%= topic.replies_count %></span>
    </div>

    <div style="clear:both"></div>
</div>