<div id="myCarousel" class="carousel slide homepage-banner">
  <ul class="banner-show carousel-inner">
    <% @recommend_banners.each_with_index do |banner, index| %>
      <li class="item <%= 'active' if index == 0 %>">
        <%= link_to banner.link do %>
          <%= image_tag banner.logo_url, alt: 'banner' %>
        <% end %>
      </li>
    <% end if @recommend_banners.present? %>

    <% if @recommend_banners.blank? %>
      <li class="item active">
        <a href=""><%= image_tag '/imgs/home-banner.png', alt: 'banner' %></a>
      </li>
    <% end %>
  </ul>

  <%= link_to "#myCarousel", data: {slide: 'prev'}, class: 'carousel-control left' do -%>
    <i class="fa fa-angle-left"></i>
  <% end -%>
  <%= link_to "#myCarousel", data: {slide: 'next'}, class: 'carousel-control right' do -%>
    <i class="fa fa-angle-right"></i>
  <% end -%>

  <ul class="banner-dot carousel-indicators">
    <% @recommend_banners.each_with_index do |banner, index| %>
      <li data-target="#myCarousel" data-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>"><span></span></li>
    <% end if @recommend_banners.count > 1 %>
  </ul>
</div>
