<div class="qa_object_item">
  <div class="pull-left">
    <%=image_tag correction.teacher.avatar.normal.url %>
  </div>
  <div class="info">
    <%if correction.video and correction.video.duration and correction.video.duration > 0 %>
        <%= [correction.teacher.view_name,"#{localize(correction.created_at,:format => :long)} 批改"].join(" • ")%> • 视频时长<%= video_duration_format(correction.video.duration) %>
    <% else %>
        <%= [correction.teacher.view_name,"#{localize(correction.created_at,:format => :long)} 批改"].join(" • ")%>
    <% end %>
  </div>
  <div class="content">
    <%if correction.video and correction.video.name  and correction.video.name.url %>
        <%= video_js_player(correction.video) %>
    <% end %>

    <%= correction.content.try(:html_safe) %>
  </div>


  <div class="footer">
    <%= render partial:'comments/index',locals: {commentable: correction} %>
  </div>

  <div class="operation pull-right">
    <%= link_to_edit(correction)%>
    <%= link_to_destroy(correction) %>
  </div>
  <div style="clear:both"></div>

</div>
