<header class="nav-live">
  <div class="container live-big">
    <div class="row">
      <%= link_to image_tag("live-logo.png"), home_path %>
      <% if params[:controller] == 'home' && action_name == 'replay' %>
        <p class="playback-head">
          <span><%= @lesson.try(:name) %></span>
          <i>|</i>
          <em><%= t('view.home/replay.replay_times') %><strong><%= @replay_item.try(:replay_times) %></strong></em>
        </p>
      <% elsif params[:action] == 'replay' || params[:controller] == 'live_studio/video_lessons' %>
        <p>
          <span><%= @lesson.try(:name) %></span>
        </p>
      <% else %>
        <p>
          <span id='live-name'><%= @current_lesson.try(:name) %></span>
          <em><%= LiveStudio::Course.human_attribute_name(:watchers_count) %> <strong id='team-online-count'>0</strong></em>
        </p>
      <% end %>
      <%= render 'layouts/v1/login_info' %>
    </div>
  </div>
</header>
