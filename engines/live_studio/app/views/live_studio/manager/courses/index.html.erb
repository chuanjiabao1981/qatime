<div class="qa_box">
  <div class="qa_big_cell">
    <div>
      <h2> <%= LiveStudio::Course.model_name.human %>

        <% unless current_user.waiter? -%>
          <%=link_to new_manager_course_path do %>
            <button type="button" class="btn btn-xs btn-success">增加<%= LiveStudio::Course.model_name.human %></button>
          <% end %>
        <% end -%>
      </h2>
    </div>

  </div>
  <div>
  <% @courses.each do |course| -%>
    <div class="row qa_big_cell">
      <div class="col-md-1">
        <%= 1 %>
      </div>
      <div class="col-md-2">
        <%= course.name%>
      </div>
      <div class="col-md-2">
        <%= course.name %>
      </div>
      <div class="col-md-2">
      </div>
      <div class="col-md-2">
        <%=link_to '编辑', edit_manager_course_path(course)%>
      </div>
      <div class="col-md-2">
        <%=link_to '删除', manager_course_path(course), method: :delete, 'data-confirm' => 'Are you sure?'%>
      </div>
    </div>
  <% end -%>
  </div>
</div>