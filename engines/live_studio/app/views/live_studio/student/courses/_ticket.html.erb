<% course = ticket.course -%>
<tr>
  <td><%= ticket_counter + 1 %></td>
  <td>
    <%= link_to course.name, [:student, course] %>
  </td>
  <td>
    <%= course.short_description %>
  </td>
  <td><%= course.status_text %></td>
  <td><%= ticket.type_name %></td>
  <td>
    <%= link_to t("activerecord.view.pay_now"), new_course_order_path(course), id: "buy-course-#{course.id}" if ticket.taste? %>
  </td>
</tr>
