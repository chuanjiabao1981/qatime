
<div class="condition-right">
  <%= form_tag '', method: :get do -%>

    <div class="condition">
      <span><%= LiveStudio::Course.human_attribute_name(:subject) %></span>
      <%= select_tag :subject, options_for_select(APP_CONSTANT['subjects'], params[:subject]), prompt: t("live_studio.course_request.menu.all"),
                     class: 'immediately' %>
    </div>
    <div class="condition">
      <span><%= LiveStudio::Course.human_attribute_name(:grade) %></span>
      <%= select_tag :grade, options_for_select(APP_CONSTANT['grades_in_menu'], params[:grade]),
                     prompt: t("live_studio.course_request.menu.all"),
                     class: 'immediately' %>
    </div>

    <div class="condition">
      <span><%= LiveStudio::Course.human_attribute_name(:status) %></span>
      <%= select_tag :status, options_for_select(LiveStudio::Course.status.options.select{|item| %w(published teaching).include?(item.last) }, params[:status]),
                     prompt: t("live_studio.course.menu.all"),
                     class: 'immediately' %>
    </div>

    <div class="condition-right ml10">
      <%= link_to t("live_studio.course.menu.reset"), live_studio.my_publish_station_workstation_course_records_path(@workstation) %>
      <%#= submit_tag t("live_studio.course.menu.query") %>
    </div>
  <% end %>
</div>