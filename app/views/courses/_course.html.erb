<div class="course_card">
  <div class="rel">
    <%=link_to course_path(course) do %>
        <%=image_tag course.cover.name.normal.url,class: "img-responsive"%>
        <div class="lesson_num">共4课</div>
    <% end %>
  </div>
  <div class="qa_box">
    <div class="qa_cell">
        <div style="color:dimgray;height: 36px;overflow: hidden;font-size: 12px;line-height:18px;text-overflow: ellipsis;">
          <%=course.name%>
        </div>
    </div>
  </div>
</div>