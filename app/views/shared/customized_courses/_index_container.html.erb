<div class="qa_box">
  <div class="qa_big_cell">
    <div class="row">
      <div class="col-md-4">
        <h2>
          <%= CustomizedCourse.model_name.human %>
          <% if allow? :customized_courses,:new %>
              <% if defined? student and  student %>
                <%= link_to new_customized_course_path(student_id: student.id) do %>
                  <button type="button" class="btn btn-xs btn-success"><%=get_edit_or_create_model_string(CustomizedCourse.new) %></button>
                <% end %>
              <% end %>
          <% end %>
        </h2>

      </div>
    </div>

  </div>
  <%= yield %>
</div>