<tr>
  <td><%= course_counter + 1 %></td>
  <td>
    <%= link_to course.name, waiter_course_path(@current_resource, course) %>
  </td>
  <td>
    <%= course.teacher_name %>
  </td>
  <td>
    <%= course.short_description %>
  </td>
  <td><%= course.status_text %></td>
  <td>
    <%=link_to t("activerecord.view.edit"), edit_waiter_course_path(@current_resource, course) if allow?("live_studio/waiter/courses", "update", @current_resource) %>
    <%=link_to t("activerecord.view.delete"), waiter_course_path(@current_resource, course), method: :delete,
               'data-confirm' => t('activerecord.view.message.confirm') if allow?("live_studio/waiter/courses", "destroy", @current_resource) %>
  </td>
</tr>
