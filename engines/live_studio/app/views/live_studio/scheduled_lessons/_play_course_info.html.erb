<div class="course-item">
  <div class="nav-item">
    <span><%= t('view.live_studio/courses.show.introduce') %></span>
  </div>
  <h2 class="remedial-classname"><%= @course.name %></h2>
  <div class="course-lessons">
    <div class="lessons-detail">
      <h3><%= t('view.live_studio/courses.show.base_info') %></h3>
      <ul>
        <li>
          <span>
            <i><%= LiveStudio::Course.human_attribute_name(:subject) %></i>
            <i><%= @course.subject %></i>
          </span>
          <span>
            <i><%= LiveStudio::Course.human_attribute_name(:grade) %></i>
            <i><%= @course.grade %></i>
          </span>
          <span>
            <i><%= t("view.course_show.lessons_count") %></i>
            <i><%= t("view.course_show.lessons_count_of", lessons_count: @course.events_count) %></i>
          </span>
        </li>
        <li>
          <span>
            <i><%= t("activerecord.view.date") %></i>
            <i><%= t("view.course_show.date_range", start_at: @course.start_at.to_date.to_s, end_at: @course.end_at.to_date.to_s) if @course.start_at && @course.end_at %></i>
          </span>
        </li>

        <li>
          <span>
            <i><%= LiveStudio::Course.human_attribute_name(:status) %></i>
            <i>
              <%= @course.status_text %>
              <% if @course.published? %>
                <% if @course.distance_days > 0 %>
                  (<%= t('view.course_show.distance_text1') % @course.distance_days %>)
                <% end %>
              <% else %>
                (<%= t('view.live_studio/courses.show.status_text', one: @course.closed_events_count, two: @course.events_count) %>)
              <% end %>
            </i>
          </span>
        </li>
      </ul>
    </div>

    <div class="lessons-detail">
      <h3><%= LiveStudio::Course.human_attribute_name(:objective) %></h3>
      <p><%= @course.objective.presence || t('view.live_studio/courses.show.tag_none')  %></p>
    </div>
    <div class="lessons-detail">
      <h3><%= LiveStudio::Course.human_attribute_name(:suit_crowd) %></h3>
      <p><%= @course.suit_crowd.presence || t('view.live_studio/courses.show.tag_none')  %></p>
    </div>
    <div class="lessons-detail">
      <h3><%= LiveStudio::Course.human_attribute_name(:course_description) %></h3>
      <p><%= raw(@course.description) %></p>
    </div>
  </div>
</div>
