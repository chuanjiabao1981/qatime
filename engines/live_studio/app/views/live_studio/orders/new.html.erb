<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= "#{t('activerecord.view.buy')}#{LiveStudio::Course.model_name.human}" %></h3>
  </div>
  <div class="panel-body">
    <%= simple_form_for [:course, @order] do |f|%>
      <div class="order_info">
        <div>
          <%= f.label :name %>
          <span><%= @course.name %></span>
        </div>
        <div>
          <%= f.label :teacher %>
          <span><%= @course.teacher_name %></span>
        </div>
        <div>
          <%= f.label :price %>
          <span><%= @course.price %></span>
        </div>
        <div>
          <%= f.label :description %>
          <span><%= @course.name %></span>
        </div>
        <div>
          <%= f.label :pay_type %>
          <%= f.input_field :pay_type, as: :radio_buttons, collection: Payment::Order.pay_types %>
        </div>

        <br />
        <%= f.button :submit, class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
