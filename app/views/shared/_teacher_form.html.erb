<div class="qa_box">
  <div class="qa_big_cell">
    <h2><%= Teacher.model_name.human %>注册</h2>
  </div>
</div>

<div class="qa_box">
  <div class="qa_big_cell">
    <%= simple_form_for teacher, :url => teacher_create_url  do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :name, :required => true %>
          <%= f.input :subject,  :collection => APP_CONSTANT["subjects"] %>
          <%= f.input :category, :collection => APP_CONSTANT["categories"] %>
          <%= f.association :school, :required => true ,:collection => School.all.collect { |s| ["#{s.city.name}-#{s.name}",s.id]} %>

          <%= f.input :email, :required => true, :autofocus => true %>

          <%= f.input :avatar,input_html:{onchange:"showimagepreview(this)"},:hint => "用户头像不可为空。" %>
          <img id="user_avatar_preview" style="width: 240px;height: 240px">
          <%= f.input :desc %>

          <%= f.input :password, :autocomplete => "off"%>
          <%= f.input :password_confirmation %>
          <% if f.object.new_record? %>
              <%= f.input :register_code_value %>

              <%= f.input :accept ,as: :boolean, :inline_label=>true,:label => false  ,:hint =>  raw("#{link_to '服务协议',
                                                                                                                "#",
                                                                                                                :data => {:toggle => "modal",:target=> "#myModal"}}") %>
          <% end %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, '注册',class: "btn btn-default" %>
        </div>
    <% end %>
  </div>
</div>


