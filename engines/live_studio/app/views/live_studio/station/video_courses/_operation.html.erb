<% if video_course.confirmed? %>
  <%= link_to t('live_studio.actions.workstation.video_course.play'), 'javascript: void(0);', data: { toggle: "modal", target: "#playModal" } %>
  <%= link_to t('live_studio.actions.workstation.video_course.create'), live_studio.edit_station_workstation_video_course_path(@workstation, video_course) %>
<% elsif video_course.completed? %>
  <%= link_to t('live_studio.actions.workstation.video_course.preview'), live_studio.preview_video_course_path(video_course) %>
  <%= link_to t('live_studio.actions.workstation.video_course.play'), 'javascript: void(0);', data: { toggle: "modal", target: "#playModal" } %>
  <%= link_to t('live_studio.actions.workstation.video_course.edit'), live_studio.edit_station_workstation_video_course_path(@workstation, video_course) %>
  <%= link_to t('live_studio.actions.workstation.video_course.publish'), live_studio.publish_station_workstation_video_course_path(@workstation, video_course), method: :patch %>
<% elsif video_course.published? %>
  <%= link_to t('live_studio.actions.workstation.video_course.preview'), live_studio.preview_video_course_path(video_course) %>
  <%= link_to t('live_studio.actions.workstation.video_course.play'), 'javascript: void(0);', data: { toggle: "modal", target: "#playModal" } %>
<% end %>
