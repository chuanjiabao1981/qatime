<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t("activerecord.view.create") %>新邀请</h4>
  </div>
  <div class="panel-body">
    <%= simple_form_for(@inviation) do |f|%>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="col-md-3 text-right">
          <%= t('view.inviation.fill_user') %>:
        </div>

        <div class="col-md-7">
          <%= f.input :parent_phone, label: false, placeholder: t('view.inviation.fill_user_placeholder'), input_html: {value: @old_inviation.try(:user_phone)}%>
        </div>
        <div class="col-md-1"></div>

        <div class="col-md-3 text-right">
          <%= t('view.inviation.set_teacher_percent') %>:
        </div>
        <div class="col-md-7">
          <div class="input-group">
            <%= f.input :teacher_percent, label: false, placeholder: t('view.inviation.set_teacher_percent_placeholder'), input_html: {min: 0, max: 100, value: @old_inviation.try(:teacher_percent)} %>
            <span class="input-group-addon">%</span>
          </div>
        </div>

        <div class="col-md-3 text-right">
          <%= t('view.inviation.set_expited_day') %>:
        </div>
        <div class="col-md-7">
          <div class="input-group">
            <%= f.input :expited_day, label: false, placeholder: t('view.inviation.set_expited_day_placeholder'), input_html: {min: 0, value: @old_inviation.try(:expited_day_display)} %>
            <span class="input-group-addon">天</span>
          </div>
        </div>

        <div class="col-md-3"></div>
        <div class="col-md-7">
          <div class="form-actions">
            <%= f.button :submit, '立即发送', class: "btn btn-default" %>
            <%=link_to '取消', manager_inviations_path, class: 'btn btn-default'%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<style>
  /*simple_form使用Bootstrap的input-group属性*/
  .simple_form .input-group{
    margin-bottom: 15px;
  }
  .simple_form .input-group .form-group{
    margin-bottom: 0 !important;
  }
</style>
