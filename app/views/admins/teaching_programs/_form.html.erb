

<div class="qa_box">
  <div class="qa_big_cell">
    <h2><%=TeachingProgram.model_name.human%></h2>
  </div>
  <div class="qa_big_cell">
    <%= simple_form_for [:admins,@teaching_program] do |f|%>
        <%= f.input :name %>
        <%= f.input :category , :collection => APP_CONSTANT["categories"]%>
        <%= f.input :grade ,    :collection => APP_CONSTANT["grades"].values.flatten%>
        <%= f.input :subject,   :collection => APP_CONSTANT["subjects"] %>
        <%= f.input :content ,as: :text, :hint => '格式应该如此: {"chapters":["第一章","第二章",.....]}'%>
        <%= f.button :submit, class: "btn btn-default" %>
    <% end %>
  </div>
</div>