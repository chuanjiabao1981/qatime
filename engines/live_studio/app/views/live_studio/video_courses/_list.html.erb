<div class="line-item">
  <div class="container">
    <% if @courses.blank? %>
      <div class="info-notfound">
        <center>
          <%= image_tag 'notfound.png' %>
        </center>
        <p>
          <%= t('view.course_show.nofound') %>
        </p>
      </div>
    <% else %>
      <ul class="item-handpick">
        <% @courses.each do |course| -%>
          <li class="col-md-3 col-xs-6">
            <%= link_to image_tag(course.publicize_url(:list), class: 'handle_error_list'), live_studio.video_course_path(course) -%>
            <div class="handpick-info">
              <p>
                <%= link_to live_studio.video_course_path(course) do -%>
                  <strong><%= truncate_u course.name, length: 12 %></strong>
                <% end -%>
              </p>
              <p>
                <span><%= course.grade %><%= course.subject %>/<%= t('view.course_show.lesson_count') % course.video_lessons_count %></span>
                <span class="class-price"><%= number_to_currency(course.current_price, locale: :cn) %></span>
              </p>
              <p><span><%= truncate_u course.teacher.try(:name), length: 6 %></span></p>
            </div>
          </li>
        <% end %>
      </ul>
      <center><div class="pagination-fix"><%= will_paginate @courses, class: 'paging', previous_label: '←', next_label: '→' %></div></center>
    <% end -%>
  </div>
</div>