<div class="qa_cell">
  <div class="row" style="padding-left: 10px">
    <div class="col-md-1"><%=   student_counter+1  %></div>
    <div class="col-md-2"><%=link_to student.name , student_path(student)%></div>
    <div class="col-md-2"><%= student.email %></div>
    <div class="col-md-3"><%= student.created_at.to_date%></div>
    <% if allow? :students,:destroy %>
    <div class="col-md-2">
      <%=link_to '删除',student_path(student),method: :delete, 'data-confirm'=>'你确定删除此学生么?'%>
    </div>
    <% end %>
  </div>
</div>
