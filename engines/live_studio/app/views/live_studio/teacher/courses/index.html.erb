<%= content_tag(:div, class: 'qa_box panel panel-default panel-support') do %>
  <%= content_tag(:div, class: 'course-header-div') do%>
    <%= content_tag(:div, class: 'title') do %>
      <%= t("activerecord.view.course") %>
      <% if allow?("live_studio/courses", "create", current_user) %>
        <%=link_to new_course_path do %>
        <button type="button" class="btn btn-xs btn-success">
          <%= t("activerecord.view.create") %><%= LiveStudio::Course.model_name.human %>
        </button>
        <% end %>
      <% end -%>
    <% end %>


    <!-- <%= content_tag(:div, class: 'search-link') do %>
      <%= link_to courses_qa_faqs_path do %>
        <%= t('activerecord.view.helps_course') %>
      <% end %>
    <% end %> -->

    <%= content_tag(:div, class: 'search-link') do %>
      <%= link_to teacher_course_invitations_path do %>
        新辅导班
      <% end %>
    <% end %>


  <% end %>
  <%= content_tag(:div, class: 'course-taxon-list') do %>
    <%= link_to content_tag(:div, t("activerecord.view.filter.all"),
                                   class: "course-taxon-div #{params[:status].blank? ? 'active' : nil}"), teacher_courses_path(@teacher) %>
    <% %w(today init preview teaching completed).each do |status| %>
      <%= link_to content_tag(:div, t("activerecord.view.filter.#{status}"),
                                     class: "course-taxon-div #{params[:status]==status ? 'active' : nil}"), "?status=#{status}" %>
    <% end %>
  <% end %>
  <%= content_tag(:div, class: 'course-list') do %>
    <%= render partial: 'course', collection: @courses %>
    <%= will_paginate @courses %>
  <% end %>
  <%= content_tag(:div, class: 'none-list') do %>
    <%= t('view.teacher_course.teacher_course_none_tips') %>
  <% end if @courses.blank? %>
<% end %>

<%= render partial: '/live_studio/courses/publish_tips' %>

