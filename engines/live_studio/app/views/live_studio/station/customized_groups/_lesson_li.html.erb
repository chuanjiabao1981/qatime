<%
   lesson = f.object
   object_id = f.object.id
   index = f.index + 1
%>
<li>
  <div class="row">
    <div class="col-md-1">
      <span><%= index < 10 ? "0#{index}" : index %></span>
    </div>
    <div class="col-md-10">
      <div class="col-md-12">
        <span><%= t('view.live_studio/interactive_course.update_class_date.lesson_name') %>：</span>
        <span><%= lesson.name %></span>
      </div>
      <div class="col-md-12 course-time">
        <span><%= t('view.live_studio/interactive_course.update_class_date.class_date_was') %>：</span>
        <span><%= lesson.class_date_was %> <%= "#{lesson.start_time}-#{lesson.end_time}" %></span>
        <i class="<%= 'hide' unless lesson.class_date_changed? %>"><%= t('view.live_studio/interactive_course.update_class_date.edit_changed') %></i>
        <i class="<%= 'hide' unless lesson.class_date_changed? %> preview_class_date_<%= object_id %>"><%= lesson.class_date %> <%= "#{lesson.start_time}-#{lesson.end_time}" %></i>
        <%= f.error :class_date %>
      </div>
    </div>
    <div class="col-md-1">
      <%= link_to t('activerecord.view.edit'), '#', data: {toggle: 'modal', target: "#adjust_edit_#{object_id}"} %>
    </div>
  </div>
</li>


<div class="modal fade adjust_edit_modal" id="adjust_edit_<%= object_id %>" data-lesson-id="<%= object_id %>" data-field-index="<%= f.index %>" data-lesson-type="<%= lesson.model_name.route_key %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog adjust-editor">
    <div class="modal-content">
      <div class="popup-title">
        <span>
          <i><%= t('view.live_studio/interactive_course.update_class_date.lesson_name') %>：</i>
          <i><%= lesson.name %></i>
        </span>
        <span class="close fa fa-times" data-dismiss="modal" aria-label="Close"></span>
      </div>

      <div class="modal-body">
        <div class="row">
          <div class="col-md-6 original-span">
            <span><%= t('view.live_studio/interactive_course.update_class_date.modal_class_date_was') %></span>
            <span><%= lesson.class_date_was %></span>
          </div>
          <div class="col-md-6">
            <%= f.label :class_date, t('view.live_studio/interactive_course.update_class_date.modal_class_date_new') %>
            <%= f.text_field :class_date, as: :string, class: 'class_date je-date form-control', placeholder: t('view.live_studio/interactive_course.placeholder.class_date'), readonly: true %>
            <%= f.error :class_date %>
          </div>
          <div class="col-md-6 original-span">
            <span><%= t('view.live_studio/interactive_course.update_class_date.modal_start_time_was') %></span>
            <span><%= lesson.start_time %></span>
          </div>
          <div class="col-md-6">
            <%= f.label :start_at_hour, t('view.live_studio/interactive_course.update_class_date.modal_start_time_new') %>
            <%= f.select :start_at_hour, options_for_select((0..23).to_a.map{|i| i > 9 ? i : "0#{i}"}, lesson.start_at_hour), {}, class: 'start_time_hour select-time form-control' %>
            <%= f.select :start_at_min, options_for_select(%w(00 05 10 15 20 25 30 35 40 45 50 55), lesson.start_at_min), {}, class: 'start_time_minute select-time form-control' %>
            <span class="help-block has-error start_time-error-<%= object_id %>"></span>
            <%= f.hidden_field :duration %>
          </div>
        </div>

        <div class="date-btn">
          <center>
            <a href="javascript:void(0);" data-dismiss="modal" aria-label="Close"><%= t('common.cancel') %></a>
            <a href="javascript:void(0);" class="btn-datesave save_modal_btn" data-lesson-id="<%= object_id %>" data-field-index="<%= f.index %>" data-lesson-type="<%= lesson.model_name.route_key %>"><%= t('common.save') %></a>
            <%= hidden_field_tag "modal_click_btn_#{object_id}" %>
            <div class="hide">
              <%= f.input_field :_update, as: :boolean, class: 'hidden' %>
            </div>
          </center>
        </div>
      </div>

    </div>
  </div>
</div>