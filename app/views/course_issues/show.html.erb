<div class="qa_box">
  <div class="qa_cell box_head">
    <%= render partial: 'course_issues/nav',locals: {customized_course: @course_issue.customized_course} %>
  </div>
</div>

<%= render partial: 'shared/qa_objects/show',locals:{qa_object: @course_issue,header_switch: false }  %>
<div class="qa_sep_15"></div>
<div class="qa_sep_15"></div>


<%= content_for :detail_header do %>
    <div class="pull-left">
        <span class="label label-primary">
            <%= I18n.t("view.course_issue.detail_header",
                       count: @course_issue.replies_count) %>
        </span>
    </div>
    <div style="clear: both"></div>
<% end %>

<%= render partial: 'shared/qa_objects/index_detail_info',
           locals:{objects: @course_issue_replies,use_super_controller: false} %>




<div class="qa_sep_15"></div>
<div class="qa_sep_15"></div>


<%if allow? :course_issue_replies,:create , @course_issue%>

    <div class="qa_box">
      <% if not @course_issue.completed? %>
          <%= render partial: 'shared/replies/form',locals:{topic: @course_issue,reply: @course_issue_reply} %>
      <% else %>
          <div style="text-align: center;padding: 20px">

            <%= t("view.topic.cant_handle_html",
                  topic_name: @course_issue.model_name.human,
                  topic_state: @course_issue.human_state_name,
                  topic_event: Topic.human_state_event_name(:handle),
                  link: link_to(@course_issue.model_name.human,
                                topics_customized_course_path(@course_issue.customized_course))
                )
            %>
            <script>
              $(function () {
                  $('.aaaaaa').on('click',
                          function(e){
//                              e.preventDefault();
                              $("<%="##{@course_issue.model_name.singular_route_key}-state-#{@course_issue.id}"%>")
                                      .addClass("animated lightSpeedIn")
                                      .one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function(){
                                          $(this).removeClass("lightSpeedIn");
                                          $(this).removeClass("animated");
                              });
                              ;
                          }
                  );
              });
            </script>
            <%=link_to "goto","##{@course_issue.model_name.singular_route_key}-state-#{@course_issue.id}",class: "aaaaaa" %>

          </div>
      <% end %>
    </div>

<% end %>