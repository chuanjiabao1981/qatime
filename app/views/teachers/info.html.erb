<%= content_for :breadcrumb do %>
  <ol class="breadcrumb">
    <li><%= link_to t("students.common.personal_center"),info_student_path(@teacher) %></li>
  </ol>
<% end %>

<div class="qa_box row">
  <%= render "info_title" %>

  <div class="col-md-4 text-center" style="vertical-align:middle;padding-top:55px">
    <%=image_tag @teacher.avatar_url(:ex_big) %>
  </div>

  <div class="col-md-8">
    <div class="qa_cell">
      <div class="row">
        <div class="col-md-2" style="padding-left:40px"><%=Student.human_attribute_name(:name)%></div>
        <div class="col-md-9">
          <%= @teacher.name %>
          <div class="pull-right">
            <% if allow? "teachers", "edit" ,@teacher%>
              <%=link_to edit_teacher_path(@teacher, cate: :edit_profile, by: :profile) do %>
                <button type="button" class="btn btn-xs btn-success">编辑讲师</button>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="qa_cell">
      <div class="row">
        <div class="col-md-2" style="padding-left:40px"><%=Student.human_attribute_name(:gender)%></div>
        <div class="col-md-9"><%= @teacher.gender_text %></div>
      </div>
    </div>
    <div class="qa_cell">
      <div class="row">
        <div class="col-md-2" style="padding-left:40px"><%=Student.human_attribute_name(:grade)%></div>
        <div class="col-md-9"><%= @teacher.grade %></div>
      </div>
    </div>
    <div class="qa_cell">
      <div class="row">
        <div class="col-md-2" style="padding-left:40px"><%=Student.human_attribute_name(:school)%></div>
        <div class="col-md-9"><%= @teacher.school.name %></div>
      </div>
    </div>
    <div class="qa_cell">
      <div class="row">
        <div class="col-md-2" style="padding-left:40px"><%=Student.human_attribute_name(:birthday)%></div>
        <div class="col-md-9"><%= @teacher.birthday %></div>
      </div>
    </div>
    <div class="qa_cell">
      <div class="row">
        <div class="col-md-2" style="padding-left:40px"><%=Student.human_attribute_name(:address)%></div>
        <div class="col-md-9">
          <%= @teacher.province.try(:name) %>&nbsp;
          <%= @teacher.city.try(:name) %>
        </div>
      </div>
    </div>
    <div class="qa_cell">
      <div class="row">
        <div class="col-md-2" style="padding-left:40px"><%=Student.human_attribute_name(:description)%></div>
        <div class="col-md-9"><%= @teacher.description %></div>
      </div>
    </div>
  </div>
</div>
