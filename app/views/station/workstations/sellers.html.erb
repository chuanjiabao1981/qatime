<div class="article">
  <div class="work-station">
    <%= render 'station/sellers/tab' %>

    <div class="filter">
      <%= link_to new_station_workstation_seller_path(@workstation), class: 'filter-left' do %>
        <%= image_tag 'addclass.png' %> <%= t('view.station.sellers.new_btn') %>
      <% end if allow?('station/sellers', 'create', @workstation) %>
    </div>

    <div class="sold-tab">
      <table border="0" cellspacing="0" cellpadding="0">
        <tbody>
          <tr>
            <th><%= t('common.index_no') %></th>
            <th><%= t('view.station.sellers.name') %></th>
            <th><%= t('view.station.sellers.login_mobile') %></th>
            <th><%= t('view.station.sellers.email') %></th>
            <th><%= t('common.operate') %></th>
          </tr>

          <%= render partial: 'station/sellers/seller', collection: @sellers %>
        </tbody>
      </table>

      <%= render 'shared/blank' if @sellers.blank? %>
      <center><div class="pagination-fix"><%= will_paginate @sellers, class: 'paging', previous_label: '←', next_label: '→' %></div></center>
    </div>
  </div>
</div>