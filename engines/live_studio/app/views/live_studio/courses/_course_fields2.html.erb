<div class="row">
  <div class="col-md-2">
    <%= f.label :teacher, label: t('view.live_studio/course.labels.teacher') %>
  </div>
  <div class="col-md-10">
    <%= f.association :teacher, collection: Teacher.pluck(:name, :id), label: false, prompt: t('view.live_studio/interactie_course.placeholder.teacher_id'), input_html: {class: 'select2'} %>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <%= f.label :teacher_percentage, required: true %>
  </div>
  <div class="col-md-10">
    <%= f.input :teacher_percentage, label: false, wrapper_html: {class: 'divided'} do %>
      <%= f.input_field :teacher_percentage %>
      <i>%</i>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <%= f.label :price, label: t('view.live_studio/interactie_course.labels.price'), required: true %>
  </div>
  <div class="col-md-10">
    <%= f.input :price, label: false, wrapper_html: {class: 'divided'} do %>
      <%= f.input_field :price %>
      <i><%= t('view.live_studio/course.hint.price') %></i>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <%= f.label :taste_count, required: true %>
  </div>
  <div class="col-md-10">
    <%= f.input :taste_count, label: false, wrapper_html: {class: 'divided'} do %>
      <%= f.input_field :taste_count, input_html: {min: 0} %>
    <% end %>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function(){
      $(".select2").select2({width: 'resolve', dropdownAutoWidth: 'true'});
    })
  </script>
<% end %>