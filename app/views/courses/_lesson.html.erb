<% if @lesson %>
    <%= debug @lesson.video.name.url + @download_token%>
    <div class="qa_box">
      <div class="qa_cell" style="height: 400px">
        <source src="<%= @lesson.video.name.url %>" id = "video_source" type="video/mp4"/>
        <div id="player"/>
      </div>
      <div class="qa_cell qa_f12 rel" >
        <div>
          <%= @lesson.desc if @lesson %>
        </div>
        <div style="clear: both"></div>
      </div>
    </div>
<% else %>
    <div style="text-align: center;padding: 10px">
      没有任何内容!
    </div>
<% end %>