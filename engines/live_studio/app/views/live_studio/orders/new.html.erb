<div class="panel panel-default">
  <div class="panel-heading">
      <%= link_to LiveStudio::Course.model_name.human, live_studio.courses_path(student_id: @student.try(:id)) %> &gt;
      <strong><%= @course.name %></strong>
  </div>
  <div class="panel-body">
    <div class="text-center">
      <h4>
      <%= t('view.payment_show.order_confirm') %>
      </h4>
    </div>
    <div class="order-info">
      <table class="table table-white table-condensed border-grey">
        <thead>
        <tr>
          <td colspan="3" class="order-info-td">
            <%= t('view.payment_show.product_info') %>
          </td>
          <td>
            <%= t('view.course_search_show.price') %>
          </td>
          <td>
            <%= t('helpers.label.payment/order.pay_type') %>
          </td>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td class="order-img-td" rowspan="5">
            <%= image_tag @course.publicize_url(:small), class: 'order-img' %>
          </td>
          <td class='order-name-td' colspan="2"><%= t('view.payment_show.order_product_name') %><%= @course.name %></td>
          <td class='order-price-td' rowspan="5">
            <%= format('￥%0.2f', @course.price) %>
          </td>
          <td rowspan="5" class="order-pay-type">
            <% ::Payment::Order::PAY_TYPE.each do |k ,v| %>
              <%= link_to t("view.payment_show.#{k}_pay"),'javascript:void(0);',rel: v,class: 'btn btn-default btn-pay' %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= t('view.course_info_show.subject') %><%= @course.subject %></td>
          <td><%= t('view.course_info_show.grade') %><%= @course.grade %></td>
        </tr>
        <tr>
          <td><%= t('view.course_info_show.teacher') %><%= @course.teacher.try(:name) %></td>
          <td><%= t('view.course_info_show.lesson_count') %><%= @course.preset_lesson_count %></td>
        </tr>
        <tr>
          <td><%= t('view.course_info_show.start_time') %><%= @course.live_start_time %></td>
          <td><%= t('view.course_info_show.end_time') %><%= @course.live_end_time %></td>
        </tr>
        <tr>
          <td><%= "#{t('view.course_search_show.current_status')}#{@course.status_text}" %></td>
          <td><%= t('view.course_show.teach_type') %></td>
        </tr>
        </tbody>
      </table>
      <div class="float-right">
        <%= simple_form_for [:course, @order] do |f|%>
          <div>
            <%= content_tag :span, t('view.payment_show.actual_price'),class: 'font-big' %>
            <%= content_tag :span, format('￥%0.2f', @course.price), class: 'font-red font-max weight' %>
          </div>
          <%= f.input :pay_type, as: :hidden %>
          <%= f.button :submit,t('activerecord.view.pay_now'), class: "btn btn-default float-right" %>
        <% end %>
      </div>
    </div>
