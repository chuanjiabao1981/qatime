<div class="qa_box">
  <div class="qa_big_cell">
    <div class="row">
      <div class="col-md-4">
        <h2><%= link_to t('view.station.teachers.index_title'), main_app.station_workstation_teachers_path(@workstation) %></h2>
      </div>
      <div class="col-md-8" style="padding-top:20px">
        <%= simple_form_for @query, url: main_app.station_workstation_teachers_path(@workstation), html: {method: :get} do |f| %>
          <div class="row">
            <%= f.input :name_or_email_or_nick_name_cont, placeholder: t('view.station.teachers.placeholders.name'), label: false, wrapper_html: { class: 'col-md-6 col-md-offset-4' } %>
            <%= f.submit "search", wrapper_html: { class: 'col-md-2' }, class: "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div>
    <%= render partial: 'teacher', collection: @teachers %>
  </div>

  <div class="qa_cell">
    <%= will_paginate @teachers, renderer: BootstrapPagination::Rails %>
  </div>
</div>