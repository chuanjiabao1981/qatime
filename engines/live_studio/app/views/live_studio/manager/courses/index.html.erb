<div class="qa_box">
  <div class="qa_big_cell">
    <div>
      <h2> <%= LiveStudio::Course.model_name.human %>

        <% unless current_user.waiter? -%>
          <%=link_to new_manager_course_path do %>
            <button type="button" class="btn btn-xs btn-success">
              <%= t("activerecord.view.create") %><%= LiveStudio::Course.model_name.human %>
            </button>
          <% end %>
        <% end -%>
      </h2>
    </div>

  </div>
  <div>
  <% @courses.each do |course| -%>
    <div class="row qa_big_cell">
      <div class="col-md-2">
        <%= link_to course.name, [:manager, course] %>
      </div>
      <div class="col-md-2">
        <%= course.teacher_name %>
      </div>
      <div class="col-md-4">
        <%= course.short_description %>
      </div>
      <div class="col-md-1">
        <%=link_to t("activerecord.view.edit"), edit_manager_course_path(course)%>
      </div>
      <div class="col-md-1">
        <%=link_to t("activerecord.view.delete"), manager_course_path(course), method: :delete,
                   'data-confirm' => t('activerecord.view.message.confirm') %>
      </div>
    </div>
  <% end -%>
  </div>
</div>