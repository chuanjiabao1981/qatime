<!-- 未登录显示试听按钮 -->
<% if current_user.nil? %>
  <%= link_to t('view.course_info_show.join_taste'),
      main_app.signin_path(redirect_url: request.original_url), class: '' %>
<!-- 非学生账号显示试听按钮点击后提示 -->
<% elsif !current_user.student? %>
  <%= link_to t('view.course_info_show.join_taste'),
              "javascript:$.toastMsg('#{t('view.live_studio/courses.show.role_notice')}');",
              class: "app-action #{'btn-single' unless @course.taste_count.to_i > 0 }"
              data: { toggle: 'modal', target: "#appTips" } %>
<!-- 试听结束 -->
<% elsif @course.tasted?(current_user) %>
  <%= link_to t('view.course_info_show.taste_end'), 'javascript:void(0);', class: 'btn-disabled' %>
<!-- 正在试听 -->
<% elsif @course.tasting?(current_user) %>
  <!-- 开始试听 -->
  <%= link_to t('view.course_info_show.start_taste'),
      live_studio.play_course_path(@course),
      target: '_blank', class: 'btn-filled'
      data: { toggle: 'modal', target: "#appTips" } %>
<!-- 试听已满 -->
<% elsif @course.taste_overflow? %>
  <%= link_to t('view.course_info_show.join_taste'),
              "javascript:$.toastMsg('#{t('view.live_studio/courses.show.role_notice')}');",
              class: '' %>
<!-- 可以试听 -->
<% else %>
  <%= link_to(t('view.course_info_show.join_taste'),
              live_studio.taste_course_path(@course),
              class: '', id: "taste-course-#{@course.id}", method: :post, remote: true) %>
<% end %>