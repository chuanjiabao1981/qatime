<tr>
  <td><%= course_counter + 1 %></td>
  <td><%= course.name %></td>
  <td><%= course.teacher_name %></td>
  <td><%= course.short_description %></td>
  <td><%= course.price %></td>
  <td><%= link_to t("activerecord.view.buy_now"), new_course_order_path(course), id: "buy-course-#{course.id}" if course.can_buy?(current_user) %></td>
</tr>
