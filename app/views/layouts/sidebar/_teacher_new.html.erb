        <span class="qa_f18"><%= t "view.teacher_bars.video_manage" %></span>&nbsp;&nbsp;
        <span class="glyphicon glyphicon-chevron-right"></span>
      <% end %>
    </li>
    <li>
      <%= link_to notifications_teacher_path(@teacher) do %>
